{% extends 'banking/base_layout.html.twig' %}

{% block page_title %}{{ tp('banking_credit_detail.page.title', [], 'banking_credit_detail') }}{% endblock %}

{% block banking_content %}
    <div class="banking__container banking__container--with-top-margin">        
        <!-- Sidebar -->
        <aside class="banking__sidebar">
            <div class="banking__sidebar-section">
                <h3 class="banking__sidebar-title">{{ tp('banking_credit_detail.sidebar.my_accounts', [], 'banking_credit_detail') }}</h3>
                <div class="banking__account-list">
                    {% if accounts is defined and accounts|length > 0 %}
                        {% for account in accounts %}
                            <div class="banking__account-item {% if loop.first %}banking__account-item--active{% endif %}">
                                <div class="banking__account-header">
                                    <span class="banking__account-name">{{ account.type|account_type_label }}</span>
                                    <span class="banking__account-number">****{{ account.iban[-4:] }}</span>
                                </div>
                                <div class="banking__account-balance">{{ account.balance|number_format(2, ',', ' ') }} {{ tp('banking_credit_detail.currency', [], 'banking_credit_detail') }}</div>
                                <div class="banking__account-status {% if account.monthlyBalanceChange >= 0 %}banking__account-status--positive{% else %}banking__account-status--negative{% endif %}">
                                    {% if account.monthlyBalanceChange >= 0 %}
                                        +{{ account.monthlyBalanceChange|number_format(2, ',', ' ') }} {{ tp('banking_credit_detail.currency', [], 'banking_credit_detail') }} {{ tp('banking_credit_detail.sidebar.this_month', [], 'banking_credit_detail') }}
                                    {% else %}
                                        {{ account.monthlyBalanceChange|number_format(2, ',', ' ') }} {{ tp('banking_credit_detail.currency', [], 'banking_credit_detail') }} {{ tp('banking_credit_detail.sidebar.this_month', [], 'banking_credit_detail') }}
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="banking__account-item">
                            <div class="banking__account-header">
                                <span class="banking__account-name">{{ tp('banking_credit_detail.sidebar.no_account', [], 'banking_credit_detail') }}</span>
                            </div>
                            <div class="banking__account-balance">0,00 {{ tp('banking_credit_detail.currency', [], 'banking_credit_detail') }}</div>
                            <div class="banking__account-status">{{ tp('banking_credit_detail.sidebar.contact_advisor', [], 'banking_credit_detail') }}</div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="banking__sidebar-section">
                <h3 class="banking__sidebar-title">{{ tp('banking_credit_detail.sidebar.quick_actions', [], 'banking_credit_detail') }}</h3>
                <div class="banking__quick-actions">
                    <a href="{{ path('banking_virements') }}" class="banking__quick-btn">
                        {{ ux_icon('heroicons:arrow-right', {'class': 'banking__quick-icon'}) }}
                        {{ tp('banking_credit_detail.actions.transfer', [], 'banking_credit_detail') }}
                    </a>
                    <button class="banking__quick-btn">
                        {{ ux_icon('heroicons:credit-card', {'class': 'banking__quick-icon'}) }}
                        {{ tp('banking_credit_detail.actions.card_opposition', [], 'banking_credit_detail') }}
                    </button>
                    <a href="{{ path('banking_ribs_index') }}" class="banking__quick-btn">
                        {{ ux_icon('heroicons:document-text', {'class': 'banking__quick-icon'}) }}
                        {{ tp('banking_credit_detail.actions.rib_iban', [], 'banking_credit_detail') }}
                    </a>
                    <button class="banking__quick-btn">
                        {{ ux_icon('heroicons:phone', {'class': 'banking__quick-icon'}) }}
                        {{ tp('banking_credit_detail.actions.contact_us', [], 'banking_credit_detail') }}
                    </button>
                </div>
            </div>
        </aside>            <!-- Main Content -->
            <div class="banking__content">
                <!-- Credit Application Details -->
                <div class="banking__credit-card">
                <!-- En-tête avec titre et lien retour -->
                <div class="banking__credit-page-header">
                    <h1 class="banking__credit-page-title">{{ tp('banking_credit_detail.page.detail_title', [], 'banking_credit_detail') }} {{ creditApplication.createdAt|date('d/m/Y') }}</h1>
                    <a href="{{ path('banking_credits') }}" class="banking__back-btn">
                        {{ ux_icon('heroicons:arrow-left', {'class': 'banking__back-icon'}) }}
                        {{ tp('banking_credit_detail.page.back_to_credits', [], 'banking_credit_detail') }}
                    </a>
                </div>
                <div class="banking__credit-header">
                    <div class="banking__credit-icon banking__credit-icon--{{ creditApplication.creditType.value }}">
                        {% if creditApplication.creditType.value == 'mortgage' %}
                            {{ ux_icon('heroicons:home', {'class': 'banking__credit-icon-svg'}) }}
                        {% elseif creditApplication.creditType.value == 'auto' %}
                            {{ ux_icon('heroicons:truck', {'class': 'banking__credit-icon-svg'}) }}
                        {% else %}
                            {{ ux_icon('heroicons:credit-card', {'class': 'banking__credit-icon-svg'}) }}
                        {% endif %}
                    </div>
                    <div class="banking__credit-info">
                        <h2 class="banking__credit-name">{{ tp(creditApplication.creditType.getLabel(), [], 'credit_step_forms') }}</h2>
                        <p class="banking__credit-reference">{{ tp('banking_credit_detail.credit.application_number', [], 'banking_credit_detail') }} {{ creditApplication.referenceNumber }}</p>
                        <div class="banking__status {{ creditApplication.status.getBadgeClass() }}">
                            {{ tp(creditApplication.status.getLabel(), [], 'enums') }}
                        </div>
                    </div>
                    <div class="banking__credit-amount">{{ creditApplication.loanAmount|number_format(2, ',', ' ') }} {{ tp('banking_credit_detail.currency', [], 'banking_credit_detail') }}</div>
                </div>

                <!-- Détails du crédit -->
                <div class="banking__credit-details">
                    <div class="banking__credit-detail">
                        <span class="banking__credit-detail-label">{{ tp('banking_credit_detail.credit.accorded_amount', [], 'banking_credit_detail') }}</span>
                        <span class="banking__credit-detail-value">{{ creditApplication.loanAmount|number_format(2, ',', ' ') }} {{ tp('banking_credit_detail.currency', [], 'banking_credit_detail') }}</span>
                    </div>
                    <div class="banking__credit-detail">
                        <span class="banking__credit-detail-label">{{ tp('banking_credit_detail.credit.duration', [], 'banking_credit_detail') }}</span>
                        <span class="banking__credit-detail-value">{{ creditApplication.duration }} {{ tp('banking_credit_detail.credit.months', [], 'banking_credit_detail') }}</span>
                    </div>
                    {% if creditApplication.monthlyPayment %}
                    <div class="banking__credit-detail">
                        <span class="banking__credit-detail-label">{{ tp('banking_credit_detail.credit.monthly_payment', [], 'banking_credit_detail') }}</span>
                        <span class="banking__credit-detail-value">{{ creditApplication.monthlyPayment|number_format(2, ',', ' ') }} {{ tp('banking_credit_detail.currency', [], 'banking_credit_detail') }}</span>
                    </div>
                    {% endif %}
                </div>

                <!-- Informations supplémentaires -->
                <div class="banking__credit-amounts">
                    {% if creditApplication.totalCost %}
                    <div class="banking__credit-amount-item">
                        <span class="banking__credit-amount-label">{{ tp('banking_credit_detail.credit.total_cost', [], 'banking_credit_detail') }}</span>
                        <span class="banking__credit-amount-value">{{ creditApplication.totalCost|number_format(2, ',', ' ') }} {{ tp('banking_credit_detail.currency', [], 'banking_credit_detail') }}</span>
                    </div>
                    {% endif %}
                  
                    <div class="banking__credit-amount-item">
                        <span class="banking__credit-amount-label">{{ tp('banking_credit_detail.credit.beneficiary', [], 'banking_credit_detail') }}</span>
                        <span class="banking__credit-amount-value">{{ creditApplication.firstName }} {{ creditApplication.lastName }}</span>
                    </div>
                </div>

               
            </div>

            <!-- Tableau d'amortissement -->
            {% if amortization_pagination is defined and amortization_pagination is not empty %}
                <div class="banking__section-header">
                    <h2 class="banking__section-title">{{ tp('banking_credit_detail.amortization.title', [], 'banking_credit_detail') }}</h2>
                    <p class="banking__section-subtitle">{{ tp('banking_credit_detail.amortization.subtitle', {'count': amortization_pagination.totalItemCount}, 'banking_credit_detail') }}</p>
                </div>

                <div class="banking__operations">
                    <table class="banking__table">
                        <thead class="banking__table-head">
                            <tr>
                                <th class="banking__table-th">{{ tp('banking_credit_detail.amortization.table.month', [], 'banking_credit_detail') }}</th>
                                <th class="banking__table-th">{{ tp('banking_credit_detail.amortization.table.date', [], 'banking_credit_detail') }}</th>
                                <th class="banking__table-th">{{ tp('banking_credit_detail.amortization.table.monthly_payment', [], 'banking_credit_detail') }}</th>
                                <th class="banking__table-th">{{ tp('banking_credit_detail.amortization.table.principal', [], 'banking_credit_detail') }}</th>
                                <th class="banking__table-th">{{ tp('banking_credit_detail.amortization.table.interest', [], 'banking_credit_detail') }}</th>
                                <th class="banking__table-th">{{ tp('banking_credit_detail.amortization.table.remaining_capital', [], 'banking_credit_detail') }}</th>
                            </tr>
                        </thead>
                        <tbody class="banking__table-body">
                            {% for row in amortization_pagination %}
                                <tr class="banking__table-row">
                                    <td class="banking__table-td">{{ row.month }}</td>
                                    <td class="banking__table-td">{{ row.date|date('m/Y') }}</td>
                                    <td class="banking__table-td banking__amount--debit">{{ row.monthly_payment|number_format(2, ',', ' ') }} {{ tp('banking_credit_detail.currency', [], 'banking_credit_detail') }}</td>
                                    <td class="banking__table-td banking__amount--credit">{{ row.principal_payment|number_format(2, ',', ' ') }} {{ tp('banking_credit_detail.currency', [], 'banking_credit_detail') }}</td>
                                    <td class="banking__table-td">{{ row.interest_payment|number_format(2, ',', ' ') }} {{ tp('banking_credit_detail.currency', [], 'banking_credit_detail') }}</td>
                                    <td class="banking__table-td">{{ row.remaining_amount|number_format(2, ',', ' ') }} {{ tp('banking_credit_detail.currency', [], 'banking_credit_detail') }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Pagination KnpPaginator -->
                {% if amortization_pagination.pageCount > 1 %}
                    <div class="banking__pagination">
                        {{ knp_pagination_render(amortization_pagination, 'pagination/banking_pagination.html.twig') }}
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>

<style>
/* Banking Base Styles */
.banking__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
    display: flex;
    gap: 32px;
}

.banking__container--with-top-margin {
    margin-top: 32px;
}

.banking__content {
    max-width: 1200px;
    margin: 0 auto;
}

/* Credit Card Styles */
.banking__credit-card {
    background: #ffffff;
    border: 1px solid #e1e8ed;
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 32px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.banking__credit-page-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    padding-bottom: 20px;
    border-bottom: 1px solid #e1e8ed;
}

.banking__credit-page-title {
    font-size: 24px;
    font-weight: 700;
    color: #2c3e50;
    margin: 0;
}

.banking__back-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: #0066cc;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
    padding: 8px 16px;
    border-radius: 6px;
}

.banking__back-btn:hover {
    background: #f0f2ff;
    color: #0052a3;
}

.banking__back-icon {
    width: 16px;
    height: 16px;
}

.banking__credit-header {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 20px;
}

.banking__credit-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.banking__credit-icon--mortgage {
    background: linear-gradient(135deg, #3498db, #5dade2);
}

.banking__credit-icon--auto {
    background: linear-gradient(135deg, #e67e22, #f39c12);
}

.banking__credit-icon--personal {
    background: linear-gradient(135deg, #9b59b6, #bb6bd9);
}

.banking__credit-icon-svg {
    width: 24px;
    height: 24px;
    color: white;
}

.banking__credit-info {
    flex: 1;
}

.banking__credit-name {
    font-size: 16px;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 4px;
}

.banking__credit-reference {
    font-size: 12px;
    color: #7f8c8d;
    font-family: monospace;
    margin: 0 0 8px 0;
}

.banking__credit-amount {
    font-size: 20px;
    font-weight: 700;
    color: #2c3e50;
    text-align: right;
}

/* Credit Details */
.banking__credit-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin-bottom: 20px;
}

.banking__credit-detail {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.banking__credit-detail-label {
    font-size: 12px;
    color: #7f8c8d;
    text-transform: uppercase;
    font-weight: 600;
}

.banking__credit-detail-value {
    font-size: 14px;
    font-weight: 600;
    color: #2c3e50;
}

/* Credit Amounts */
.banking__credit-amounts {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 16px;
    margin-bottom: 20px;
}

.banking__credit-amount-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
}

.banking__credit-amount-item:last-child {
    margin-bottom: 0;
}

.banking__credit-amount-label {
    font-size: 13px;
    color: #7f8c8d;
}

.banking__credit-amount-value {
    font-size: 13px;
    font-weight: 600;
    color: #2c3e50;
}

/* Credit Actions */
.banking__credit-actions {
    display: flex;
    gap: 12px;
}

.banking__credit-btn {
    flex: 1;
    padding: 10px 16px;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    text-decoration: none;
}

.banking__credit-btn--primary {
    background: #0066cc;
    color: white;
}

.banking__credit-btn--primary:hover {
    background: #0052a3;
}

.banking__credit-btn--secondary {
    background: #f8f9fa;
    color: #0066cc;
    border: 1px solid #e1e8ed;
}

.banking__credit-btn--secondary:hover {
    background: #f1f5f9;
    border-color: #0066cc;
}

.banking__action-icon {
    width: 16px;
    height: 16px;
}

/* Status Styles */
.banking__status {
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    display: inline-block;
}

.banking__status--completed {
    background: rgba(39, 174, 96, 0.1);
    color: #27ae60;
}

.banking__status--processing {
    background: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
}

.banking__status--pending {
    background: rgba(149, 165, 166, 0.1);
    color: #95a5a6;
}

.banking__status--rejected {
    background: rgba(231, 76, 60, 0.1);
    color: #e74c3c;
}

.banking__status--contract {
    background: rgba(52, 152, 219, 0.1);
    color: #3498db;
}

.banking__status--signed {
    background: rgba(155, 89, 182, 0.1);
    color: #9b59b6;
}

.banking__status--validated {
    background: rgba(46, 204, 113, 0.1);
    color: #2ecc71;
}

.banking__status--disbursed {
    background: rgba(22, 160, 133, 0.1);
    color: #16a085;
}

.banking__status--requires-docs {
    background: rgba(230, 126, 34, 0.1);
    color: #e67e22;
}

.banking__status--cancelled {
    background: rgba(127, 140, 141, 0.1);
    color: #7f8c8d;
}

/* Section Headers */
.banking__section-header {
    margin: 32px 0 16px 0;
}

.banking__section-title {
    font-size: 18px;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 4px;
}

.banking__section-subtitle {
    font-size: 14px;
    color: #7f8c8d;
    margin: 0;
}

/* Table Styles */
.banking__operations {
    background: #ffffff;
    border: 1px solid #e1e8ed;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 20px;
}

.banking__table {
    width: 100%;
    border-collapse: collapse;
}

.banking__table-head {
    background: #f8f9fa;
}

.banking__table-th {
    padding: 16px 12px;
    text-align: left;
    font-weight: 600;
    color: #495057;
    border-bottom: 1px solid #e9ecef;
    font-size: 13px;
}

.banking__table-body {
    background: white;
}

.banking__table-row {
    border-bottom: 1px solid #f1f3f5;
    transition: background-color 0.1s ease;
}

.banking__table-row:hover {
    background: #f8f9fa;
}

.banking__table-td {
    padding: 12px;
    font-size: 14px;
    color: #2c3e50;
    border-bottom: 1px solid #f1f3f5;
}

/* Amount Colors */
.banking__amount--credit {
    color: #27ae60;
    font-weight: 600;
}

.banking__amount--debit {
    color: #e74c3c;
    font-weight: 600;
}

/* Pagination */
.banking__pagination {
    padding: 24px;
    background: white;
    border: 1px solid #e1e8ed;
    border-top: none;
    border-radius: 0 0 8px 8px;
}

.banking__pagination-nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
}

.banking__pagination-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.banking__pagination-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 10px 16px;
    background: white;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    color: #374151;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease;
    min-width: 100px;
    justify-content: center;
}

.banking__pagination-btn:hover:not(.banking__pagination-btn--disabled) {
    background: #f9fafb;
    border-color: #0066cc;
    color: #0066cc;
    text-decoration: none;
}

.banking__pagination-btn--disabled {
    color: #9ca3af;
    cursor: not-allowed;
    opacity: 0.6;
}

.banking__pagination-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
}

.banking__pagination-pages {
    display: flex;
    align-items: center;
    gap: 4px;
    margin: 0 12px;
}

.banking__pagination-page {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: white;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    color: #374151;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease;
}

.banking__pagination-page:hover {
    background: #f9fafb;
    border-color: #0066cc;
    color: #0066cc;
    text-decoration: none;
}

.banking__pagination-page--current {
    background: #0066cc;
    border-color: #0066cc;
    color: white;
    font-weight: 600;
}

.banking__pagination-info {
    font-size: 14px;
    color: #6b7280;
    text-align: center;
    font-weight: 500;
}

/* Sidebar Styles */
.banking__sidebar {
    width: 280px;
    flex-shrink: 0;
}

.banking__sidebar-section {
    background: #ffffff;
    border: 1px solid #e1e8ed;
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 20px;
}

.banking__sidebar-title {
    font-size: 16px;
    font-weight: 600;
    color: #2c3e50;
    margin: 0 0 16px 0;
}

.banking__account-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.banking__account-item {
    padding: 16px;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    background: #f8f9fa;
    transition: all 0.2s ease;
}

.banking__account-item--active {
    border-color: #0066cc;
    background: #f0f2ff;
}

.banking__account-item:hover {
    border-color: #0066cc;
    background: #f0f2ff;
}

.banking__account-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
}

.banking__account-name {
    font-size: 14px;
    font-weight: 600;
    color: #2c3e50;
}

.banking__account-number {
    font-size: 12px;
    color: #7f8c8d;
    font-family: monospace;
}

.banking__account-balance {
    font-size: 18px;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 4px;
}

.banking__account-status {
    font-size: 12px;
    color: #7f8c8d;
}

.banking__account-status--positive {
    color: #27ae60;
}

.banking__account-status--negative {
    color: #e74c3c;
}

.banking__quick-actions {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.banking__quick-btn {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 6px;
    color: #495057;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease;
    cursor: pointer;
}

.banking__quick-btn:hover {
    background: #e9ecef;
    border-color: #0066cc;
    color: #0066cc;
}

.banking__quick-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
}

.banking__content {
    flex: 1;
    min-width: 0;
}

/* Responsive */
