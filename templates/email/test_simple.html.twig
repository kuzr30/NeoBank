{% extends 'email/base_email.html.twig' %}

{% block title %}Test Configuration Email - {{ company_name ?? 'SEDEF BANK' }}{% endblock %}

{% block content %}
    <h2 style="color: #1976d2;">Test de Configuration Email</h2>
    
    <p>{{ test_message }}</p>
    
    <div style="background: #e3f2fd; padding: 20px; border-radius: 8px; margin: 20px 0;">
        <h3 style="margin-top: 0; color: #0d47a1;">Détails du test</h3>
        <p><strong>Timestamp:</strong> {{ timestamp|date('d/m/Y à H:i:s') }}</p>
        <p><strong>Configuration:</strong> Mailjet SMTP</p>
        <p><strong>Environnement:</strong> {{ app.environment }}</p>
    </div>
    
    <p style="color: #2e7d32; font-weight: bold;">Si vous recevez cet email, la configuration Mailjet fonctionne correctement !</p>
{% endblock %}
