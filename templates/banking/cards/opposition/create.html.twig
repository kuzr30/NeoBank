{% extends 'base.html.twig' %}

{% block title %}Déclarer une opposition - {{ card.cardNumber|slice(-4) }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card-danger {
            border: 2px solid #e74c3c;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
            padding: 30px;
            margin: 20px 0;
        }
        .reason-option {
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 15px;
            cursor: pointer;
            transition: all 0.3s;
        }
        .reason-option:hover {
            border-color: #e74c3c;
            background-color: #ffeaea;
        }
        .reason-option.selected {
            border-color: #e74c3c;
            background-color: #ffeaea;
        }
        .warning-box {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 10px;
            padding: 20px;
            margin: 20px 0;
        }
        .emergency-notice {
            background: linear-gradient(45deg, #e74c3c, #c0392b);
            color: white;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            text-align: center;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Notice d'urgence -->
            <div class="emergency-notice">
                <h3><i class="fas fa-exclamation-triangle"></i> OPPOSITION DE CARTE</h3>
                <p class="mb-0">Cette action bloquera immédiatement votre carte. Elle ne pourra plus être utilisée.</p>
            </div>

            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-ban"></i> Déclaration d'opposition
                    </h4>
                </div>
                
                <div class="card-body">
                    <!-- Détails de la carte -->
                    <div class="card-danger text-center">
                        <h4>
                                                        {% if card.category == 'visa' %}
                                <i class="fab fa-cc-visa text-blue-600"></i> VISA
                            {% elseif card.category == 'mastercard' %}
                                <i class="fab fa-cc-mastercard"></i> MASTERCARD
                            {% endif %}
                            {{ card.cardType|title }}
                        </h4>
                        <div style="font-family: 'Courier New', monospace; font-size: 1.5em; letter-spacing: 3px; margin: 20px 0;">
                            •••• •••• •••• {{ card.cardNumber|slice(-4) }}
                        </div>
                        <p class="mb-0">
                            Compte: {{ card.account.accountNumber }}<br>
                            Expire le {{ card.expiryDate|date('m/Y') }}
                        </p>
                    </div>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    
                    <!-- Sélection du motif -->
                    <div class="mb-4">
                        <h5><i class="fas fa-clipboard-list"></i> Motif de l'opposition</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="reason-option" data-reason="lost">
                                    <div class="text-center">
                                        <i class="fas fa-search fa-2x text-warning mb-3"></i>
                                        <h6>Carte perdue</h6>
                                        <small class="text-muted">Vous ne retrouvez plus votre carte</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="reason-option" data-reason="stolen">
                                    <div class="text-center">
                                        <i class="fas fa-user-ninja fa-2x text-danger mb-3"></i>
                                        <h6>Carte volée</h6>
                                        <small class="text-muted">Votre carte a été dérobée</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="reason-option" data-reason="compromised">
                                    <div class="text-center">
                                        <i class="fas fa-shield-alt fa-2x text-danger mb-3"></i>
                                        <h6>Carte compromise</h6>
                                        <small class="text-muted">Données utilisées frauduleusement</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="reason-option" data-reason="fraudulent_activity">
                                    <div class="text-center">
                                        <i class="fas fa-exclamation-triangle fa-2x text-danger mb-3"></i>
                                        <h6>Activité frauduleuse</h6>
                                        <small class="text-muted">Transactions non autorisées</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="reason-option" data-reason="damaged">
                                    <div class="text-center">
                                        <i class="fas fa-tools fa-2x text-secondary mb-3"></i>
                                        <h6>Carte endommagée</h6>
                                        <small class="text-muted">Carte cassée ou défectueuse</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="reason-option" data-reason="other">
                                    <div class="text-center">
                                        <i class="fas fa-question fa-2x text-secondary mb-3"></i>
                                        <h6>Autre motif</h6>
                                        <small class="text-muted">Précisez dans la description</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_row(form.reason, {'attr': {'style': 'display: none;'}}) }}
                    </div>
                    
                    <!-- Description -->
                    <div class="mb-4">
                        {{ form_row(form.description) }}
                    </div>
                    
                    <!-- Carte de remplacement -->
                    <div class="mb-4">
                        <h5><i class="fas fa-sync-alt"></i> Carte de remplacement</h5>
                        {{ form_row(form.newCardRequested, {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                    
                    <!-- Avertissements -->
                    <div class="warning-box">
                        <h6><i class="fas fa-exclamation-triangle text-warning"></i> Importantes informations</h6>
                        <ul class="mb-0">
                            <li><strong>Blocage immédiat</strong> : Votre carte sera bloquée instantanément</li>
                            <li><strong>Irréversible</strong> : Cette action ne peut pas être annulée</li>
                            <li><strong>Nouvelle carte</strong> : Si demandée, elle sera émise sous 5-7 jours</li>
                            <li><strong>Frais</strong> : Aucun frais pour l'opposition, 5€ pour le remplacement</li>
                            <li><strong>Confirmation</strong> : Vous recevrez un email avec la référence</li>
                        </ul>
                    </div>
                    
                    <!-- Boutons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('app_card_opposition_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Annuler
                        </a>
                        {{ form_widget(form.submit) }}
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
            
            <!-- Contact d'urgence -->
            <div class="alert alert-info mt-4">
                <h6><i class="fas fa-phone"></i> Besoin d'aide ?</h6>
                <p class="mb-0">
                    Service client disponible 24h/24 : <strong>02/XXX.XX.XX</strong><br>
                    En cas d'urgence, vous pouvez également faire opposition par téléphone.
                </p>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const reasonOptions = document.querySelectorAll('[data-reason]');
    const reasonField = document.querySelector('#card_opposition_reason');
    
    reasonOptions.forEach(option => {
        option.addEventListener('click', function() {
            reasonOptions.forEach(o => o.classList.remove('selected'));
            this.classList.add('selected');
            reasonField.value = this.dataset.reason;
        });
    });
});
</script>
{% endblock %}
