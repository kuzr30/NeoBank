{% extends 'email/base_email.html.twig' %}

{% block title %}{{ tp('email_welcome.title', {}, 'email_welcome') }}{% endblock %}

{% block content %}
    <h2 class="content-title">{{ tp('email_welcome.content.page_title', {firstName: firstName}, 'email_welcome') }}</h2>
    
    <p class="content-text">
        {{ tp('email_welcome.content.intro', {}, 'email_welcome')|raw }}
    </p>

    <div class="success-box">
        <h3 style="margin-top: 0; color: #2e7d32;">{{ tp('email_welcome.content.account_created.title', {}, 'email_welcome') }}</h3>
        <p style="margin-bottom: 0; color: #000000;">
            {{ tp('email_welcome.content.account_created.description', {}, 'email_welcome') }}
        </p>
    </div>

    <p class="content-text">
        {{ tp('email_welcome.content.services_intro', {}, 'email_welcome') }}
    </p>

    <ul style="color: #000000; font-size: 18px; line-height: 1.7; padding-left: 30px; margin: 0 0 30px 0;">
        <li style="margin: 0 0 12px 0;">{{ tp('email_welcome.content.services.item_1', {}, 'email_welcome') }}</li>
        <li style="margin: 0 0 12px 0;">{{ tp('email_welcome.content.services.item_2', {}, 'email_welcome') }}</li>
        <li style="margin: 0 0 12px 0;">{{ tp('email_welcome.content.services.item_3', {}, 'email_welcome') }}</li>
        <li style="margin: 0 0 12px 0;">{{ tp('email_welcome.content.services.item_4', {}, 'email_welcome') }}</li>
        <li style="margin: 0 0 12px 0;">{{ tp('email_welcome.content.services.item_5', {}, 'email_welcome') }}</li>
        <li style="margin: 0 0 12px 0;">{{ tp('email_welcome.content.services.item_6', {}, 'email_welcome') }}</li>
    </ul>

    <div class="btn-container" style="text-align:center;margin:50px 0;">
        <a href="{{ loginUrl }}" class="btn" style="display:inline-block;margin:0;padding:22px 45px;background:#2c3e50;color:#ffffff!important;font-size:20px;font-weight:700;line-height:1;text-decoration:none;text-align:center;border-radius:50px;border:none;cursor:pointer;box-shadow:0 15px 35px rgba(44,62,80,0.4);text-transform:uppercase;letter-spacing:1px;transition:all 0.3s ease;">{{ tp('email_welcome.content.access_button', {}, 'email_welcome') }}</a>
    </div>

    <div class="info-box">
        <h3 style="margin-top: 0; color: #1976d2;">{{ tp('email_welcome.content.security_section.title', {}, 'email_welcome') }}</h3>
        <p style="margin-bottom: 0; color: #000000;">
            {{ tp('email_welcome.content.security_section.description', {}, 'email_welcome') }}
        </p>
    </div>

    <p class="content-text">
        {{ tp('email_welcome.content.support_text', {}, 'email_welcome') }}
    </p>

    <p class="content-text" style="margin-bottom: 0;">
        {{ tp('email_welcome.content.signature', {}, 'email_welcome')|raw }}
    </p>
{% endblock %}
