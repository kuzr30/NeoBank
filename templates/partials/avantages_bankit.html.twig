                <p>{{ t('bankit_advantages.banking_security.description') }}</p>
            </div>
        </div>
    </div>
</section>

<style>
.avantages-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
}

.section-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 4rem;
}

.section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #3b82f6, #10b981);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
}

.section-badge svg {
    width: 1rem;
    height: 1rem;
}

.section-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 1rem;
    line-height: 1.2;
}

.section-header p {
    font-size: 1.125rem;
    color: #64748b;
    line-height: 1.6;
}

.avantages-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.avantage-card {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.3s;
    border: 1px solid #e2e8f0;
    position: relative;
    overflow: hidden;
}

.avantage-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #3b82f6, #10b981);
    transform: scaleX(0);
    transition: transform 0.3s;
}

.avantage-card:hover::before {
    transform: scaleX(1);
}

.avantage-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
}

.avantage-card.featured {
    grid-column: 1 / -1;
    background: linear-gradient(135deg, #1e293b, #334155);
    color: white;
    transform: scale(1.02);
}

.avantage-card.featured::before {
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
}

.avantage-icon {
    width: 4rem;
    height: 4rem;
    background: linear-gradient(135deg, #3b82f6, #10b981);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    position: relative;
}

.avantage-card.featured .avantage-icon {
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
}

.avantage-icon::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: inherit;
    opacity: 0.2;
    transform: scale(1.5);
    z-index: -1;
}

.avantage-icon svg {
    width: 2rem;
    height: 2rem;
    color: white;
}

.avantage-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: inherit;
}

.avantage-card p {
    line-height: 1.6;
    color: #64748b;
    margin-bottom: 1rem;
}

.avantage-card.featured p {
    color: rgba(255, 255, 255, 0.9);
}

.avantage-stats {
    display: flex;
    gap: 1rem;
}

.stat {
    background: rgba(251, 191, 36, 0.1);
    color: #f59e0b;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.875rem;
    font-weight: 500;
}

@media (max-width: 768px) {
    .avantages-section { padding: 3rem 0; }
    .section-header h2 { font-size: 2rem; }
    .avantages-grid { grid-template-columns: 1fr; gap: 1.5rem; }
    .avantage-card.featured { grid-column: 1; transform: none; }
}
</style>
{% endblock %}
