/* =================================================================
   CREDIT CARD - TYPES SECTION
   ================================================================= */

/* Block: card-types */
.card-types {
    padding: 6rem 0;
    background: var(--color-background);
    position: relative;
}

.card-types::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    opacity: 0.5;
}

/* Element: card-types__container */
.card-types__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
}

/* Element: card-types__header */
.card-types__header {
    text-align: center;
    margin-bottom: 4rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
}

/* Element: card-types__title */
.card-types__title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    color: var(--color-text);
    margin-bottom: 1.5rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
}

/* Element: card-types__subtitle */
.card-types__subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.375rem);
    color: var(--color-text-muted);
    line-height: 1.7;
    font-weight: 400;
}

/* Element: card-types__grid */
.card-types__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
}

/* Element: card-types__item */
.card-types__item {
    background: white;
    border-radius: 1.25rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
}

.card-types__item:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px rgba(0, 0, 0, 0.1);
}

/* Modifier: card-types__item--featured */
.card-types__item--featured {
    border: 2px solid #e55a2b;
    transform: scale(1.05);
}

.card-types__item--featured:hover {
    transform: scale(1.05) translateY(-8px);
}

/* Element: card-types__badge */
.card-types__badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(15, 23, 42, 0.9);
    color: white;
    padding: 0.625rem 1.25rem;
    border-radius: 2rem;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    z-index: 3;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

/* Modifier: card-types__badge--popular */
.card-types__badge--popular {
    background: linear-gradient(135deg, #e55a2b 0%, #fbbf24 100%);
    color: white;
}

/* Modifier: card-types__badge--premium */
.card-types__badge--premium {
    background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

/* Element: card-types__preview */
.card-types__preview {
    padding: 2rem;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 200px;
}

/* Element: card-types__card */
.card-types__card {
    width: 280px;
    height: 180px;
    border-radius: 1rem;
    padding: 1.25rem;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
    transform: perspective(1000px) rotateX(10deg) rotateY(-5deg);
    transition: transform 0.3s ease;
    overflow: hidden;
}

.card-types__card:hover {
    transform: perspective(1000px) rotateX(0deg) rotateY(0deg);
}

/* Modifier: card-types__card--classic */
.card-types__card--classic {
    background: linear-gradient(135deg, #e55a2b 0%, #d2691e 100%);
}

/* Modifier: card-types__card--gold */
.card-types__card--gold {
    background: linear-gradient(135deg, #d4af37 0%, #b8860b 100%);
}

/* Modifier: card-types__card--platinum */
.card-types__card--platinum {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
}

/* Element: card-types__card-header */
.card-types__card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

/* Element: card-types__card-logo */
.card-types__card-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
