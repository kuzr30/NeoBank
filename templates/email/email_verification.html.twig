{% extends 'email/base_email.html.twig' %}

{% block title %}{{ tp('email_email_verification.title', {}, 'email_email_verification') }}{% endblock %}

{% block content %}
    <h2 class="content-title">{{ tp('email_email_verification.content.page_title', {}, 'email_email_verification') }}</h2>
    
    <p class="content-text">
        {{ tp('email_email_verification.content.greeting', {'firstName': firstName}, 'email_email_verification')|raw }}
    </p>

    <p class="content-text">
        {{ tp('email_email_verification.content.intro', {}, 'email_email_verification') }}
    </p>

    <div class="info-box">
        <h3 style="margin-top: 0; color: #1976d2;">{{ tp('email_email_verification.content.new_email.title', {}, 'email_email_verification') }}</h3>
        <p style="margin-bottom: 0; color: #000000;">
            <strong>{{ tp('email_email_verification.content.new_email.label', {}, 'email_email_verification') }}</strong><br>
            <span style="color: #1976d2; font-weight: 600;">{{ newEmail }}</span>
        </p>
    </div>

    <p class="content-text">
        {{ tp('email_email_verification.content.instruction', {}, 'email_email_verification') }}
    </p>

    <div class="btn-container" style="text-align:center;margin:50px 0;">
        <a href="{{ verificationUrl }}" class="btn" style="display:inline-block;margin:0;padding:22px 45px;background:#2c3e50;color:#ffffff!important;font-size:20px;font-weight:700;line-height:1;text-decoration:none;text-align:center;border-radius:50px;border:none;cursor:pointer;box-shadow:0 15px 35px rgba(44,62,80,0.4);text-transform:uppercase;letter-spacing:1px;transition:all 0.3s ease;">{{ tp('email_email_verification.content.button_text', {}, 'email_email_verification') }}</a>
    </div>

    <div class="warning-box">
        <h3 style="margin-top: 0; color: #f57c00;">{{ tp('email_email_verification.content.warning.title', {}, 'email_email_verification') }}</h3>
        <p style="margin-bottom: 0; color: #000000;">
            {{ tp('email_email_verification.content.warning.description', {'expirationDate': expirationDate|date('d/m/Y Ã  H:i')}, 'email_email_verification')|raw }}
        </p>
    </div>

    <div class="error-box">
        <h3 style="margin-top: 0; color: #f44336;">{{ tp('email_email_verification.content.security.title', {}, 'email_email_verification') }}</h3>
        <p style="margin-bottom: 0; color: #000000;">
            {{ tp('email_email_verification.content.security.description', {}, 'email_email_verification') }}
        </p>
    </div>

    <p class="content-text">
        {{ tp('email_email_verification.content.manual_link', {}, 'email_email_verification') }}
    </p>

    <div style="background-color: #f8f9fa; padding: 15px; border-radius: 8px; margin: 20px 0; font-family: monospace; word-break: break-all; font-size: 14px; color: #000000;">
        {{ verificationUrl }}
    </div>

    <p class="content-text" style="margin-bottom: 0;">
        {{ tp('email_email_verification.content.signature', {}, 'email_email_verification')|raw }}
    </p>
{% endblock %}
