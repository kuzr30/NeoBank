<!-- Crédits -->
<section class="banking__content">
    
    <!-- Credits Header -->
    <div class="banking__operations-header">
        <div class="banking__account-summary">
            <h1 class="banking__account-title">{{ tp('banking_credits.header.title', [], 'banking_credits') }}</h1>
            <div class="banking__account-details">
                <span class="banking__account-type">{{ tp('banking_credits.header.breadcrumb_banking', [], 'banking_credits') }}</span>
                <span class="banking__account-updated">{{ tp('banking_credits.header.last_update', [], 'banking_credits') }} : {{ "now"|date('d/m/Y à H:i') }}</span>
            </div>
        </div>
        <div class="banking__balance-display">
            <a href="{{ path('credit_application_start') }}" class="banking__action-primary">
                {{ ux_icon('heroicons:plus', {'class': 'banking__action-icon'}) }}
                {{ tp('banking_credits.available_credits.apply', [], 'banking_credits') }}
            </a>
        </div>
    </div>

    {% if hasCredits or hasApplications or (creditSubAccounts is defined and creditSubAccounts|length > 0) %}
        <!-- Credit Summary -->
        <div class="banking__credit-summary">
            <div class="banking__credit-stat">
                <div class="banking__credit-stat-value">{{ creditStats.validatedCount }}</div>
                <div class="banking__credit-stat-label">{{ tp('banking_credits.statistics.total_credits', [], 'banking_credits') }}</div>
            </div>
            <div class="banking__credit-stat">
                <div class="banking__credit-stat-value">{{ creditStats.totalCreditAmount|number_format(2, ',', ' ') }} €</div>
                <div class="banking__credit-stat-label">{{ tp('banking_credits.statistics.total_amount', [], 'banking_credits') }}</div>
            </div>
            <div class="banking__credit-stat">
                <div class="banking__credit-stat-value">{{ creditStats.totalCreditBalance|number_format(2, ',', ' ') }} €</div>
                <div class="banking__credit-stat-label">{{ tp('banking_credits.statistics.total_remaining', [], 'banking_credits') }}</div>
            </div>
            <div class="banking__credit-stat">
                <div class="banking__credit-stat-value">{{ creditStats.totalAvailableBalance|number_format(2, ',', ' ') }} €</div>
                <div class="banking__credit-stat-label">{{ tp('banking_credits.statistics.available_balance', [], 'banking_credits') }}</div>
            </div>
            <div class="banking__credit-stat">
                <div class="banking__credit-stat-value">{{ creditStats.totalMonthlyPayments|number_format(2, ',', ' ') }} €</div>
                <div class="banking__credit-stat-label">{{ tp('banking_credits.statistics.monthly_payments', [], 'banking_credits') }}</div>
            </div>
        </div>

        {% if creditSubAccounts is defined and creditSubAccounts|length > 0 %}
            <!-- Available Credit Accounts -->
            <div class="banking__section-header">
                <h2 class="banking__section-title">{{ tp('banking_credits.available_credits.title', [], 'banking_credits') }}</h2>
                <p class="banking__section-subtitle">{{ tp('banking_credits.available_credits.subtitle', [], 'banking_credits') }}</p>
            </div>

            <div class="banking__credits-grid">
                {% for subAccount in creditSubAccounts %}
                    <div class="banking__credit-card" style="border-left: 4px solid #16a085;">
                        <div class="banking__credit-header">
                            <div class="banking__credit-icon" style="background: linear-gradient(135deg, #16a085, #1abc9c);">
                                {{ ux_icon('heroicons:banknotes', {'class': 'banking__credit-icon-svg'}) }}
                            </div>
                            <div class="banking__credit-info">
                                <h3 class="banking__credit-name">{{ tp('banking_credits.available_credits.credit_account', [], 'banking_credits') }}</h3>
                                <p class="banking__credit-ref">{{ subAccount.account.accountNumber }}</p>
                            </div>
                            <div class="banking__status banking__status--disbursed">{{ tp('banking_credits.available_credits.available', [], 'banking_credits') }}</div>
                        </div>
                        
                        <div class="banking__credit-amount" style="color: #16a085;">
                            {{ subAccount.amount|number_format(2, ',', ' ') }} €
                        </div>

                        <div class="banking__credit-details">
                            <div class="banking__credit-detail">
                                <span class="banking__credit-label">{{ tp('banking_credits.labels.status', [], 'banking_credits') }}</span>
                                <span class="banking__credit-value" style="color: #16a085;">{{ tp('banking_credits.available_credits.funds_released', [], 'banking_credits') }}</span>
                            </div>
                        </div>

                        <div class="banking__credit-actions">
                            <a href="{{ path('banking_credit_transfer_form', {id: subAccount.id}) }}" 
                               class="banking__credit-btn banking__credit-btn--primary">
                                {{ ux_icon('heroicons:arrow-down-circle', {'class': 'banking__action-icon'}) }}
                                {{ tp('banking_credits.available_credits.transfer_to_main', [], 'banking_credits') }}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {% if hasCredits %}
            <!-- Active Credits -->
            <div class="banking__section-header">
                <h2 class="banking__section-title">{{ tp('banking_credits.active_credits.title', [], 'banking_credits') }}</h2>
            </div>

            <div class="banking__credits-grid">
                {% for credit in approvedCredits %}
                    <div class="banking__credit-card" style="cursor: pointer;" onclick="window.location.href='{{ path('banking_credit_application_detail', {id: credit.id}) }}'">
                        <div class="banking__credit-header">
                            <div class="banking__credit-icon banking__credit-icon--{{ credit.creditType.value == 'mortgage' ? 'mortgage' : (credit.creditType.value == 'auto' ? 'auto' : 'personal') }}">
                                {% if credit.creditType.value == 'mortgage' %}
                                    {{ ux_icon('heroicons:home', {'class': 'banking__credit-icon-svg'}) }}
                                {% elseif credit.creditType.value == 'auto' %}
                                    {{ ux_icon('heroicons:truck', {'class': 'banking__credit-icon-svg'}) }}
                                {% else %}
                                    {{ ux_icon('heroicons:credit-card', {'class': 'banking__credit-icon-svg'}) }}
                                {% endif %}
                            </div>
                            <div class="banking__credit-info">
                                <h3 class="banking__credit-name">{{ tp(credit.creditType.getLabel(), [], 'credit_step_forms') }}</h3>
                                <p class="banking__credit-reference">{{ tp('banking_credits.applications.reference', [], 'banking_credits') }} {{ credit.id|str_pad(6, '0', 'left') }}</p>
                                {% if credit.creditType.value == 'mortgage' %}
                                    <p class="banking__credit-property">{{ credit.address ?: tp('banking_credits.active_credits.real_estate', [], 'banking_credits') }}</p>
                                {% endif %}
                            </div>
                            <div class="banking__credit-rate">1,45%</div>
                        </div>
                        
                        <div class="banking__credit-amounts">
                            <div class="banking__credit-amount-item">
                                <span class="banking__credit-amount-label">{{ tp('banking_credits.labels.initial_capital', [], 'banking_credits') }}</span>
                                <span class="banking__credit-amount-value">{{ credit.loanAmount|number_format(2, ',', ' ') }} €</span>
                            </div>
                            <div class="banking__credit-amount-item">
                                <span class="banking__credit-amount-label">{{ tp('banking_credits.active_credits.remaining_capital', [], 'banking_credits') }}</span>
                                <span class="banking__credit-amount-value banking__credit-amount-value--main">{{ credit.loanAmount|number_format(2, ',', ' ') }} €</span>
                            </div>
                            <div class="banking__credit-amount-item">
                                <span class="banking__credit-amount-label">{{ tp('banking_credits.active_credits.monthly_payment', [], 'banking_credits') }}</span>
                                <span class="banking__credit-amount-value">{{ credit.monthlyPayment|number_format(2, ',', ' ') }} €</span>
                            </div>
                        </div>

                        <div class="banking__credit-progress">
                            <div class="banking__credit-progress-bar">
                                <div class="banking__credit-progress-fill" style="width: 5%"></div>
                            </div>
                            <div class="banking__credit-progress-text">{{ tp('banking_credits.active_credits.progress', [], 'banking_credits') }}</div>
                        </div>

                        <div class="banking__credit-details">
                            <div class="banking__credit-detail">
                                <span class="banking__credit-detail-label">{{ tp('banking_credits.labels.duration', [], 'banking_credits') }}</span>
                                <span class="banking__credit-detail-value">{{ credit.duration }} {{ tp('banking_credits.labels.months', [], 'banking_credits') }}</span>
                            </div>
                            <div class="banking__credit-detail">
                                <span class="banking__credit-detail-label">{{ tp('banking_credits.labels.start_date', [], 'banking_credits') }}</span>
                                <span class="banking__credit-detail-value">{{ credit.createdAt|date('d/m/Y') }}</span>
                            </div>
                            <div class="banking__credit-detail">
                                <span class="banking__credit-detail-label">{{ tp('banking_credits.labels.status', [], 'banking_credits') }}</span>
                                <span class="banking__credit-detail-value">{{ tp(credit.status.getLabel(), [], 'enums') }}</span>
                            </div>
                        </div>

                        <div class="banking__credit-actions" onclick="event.stopPropagation();">
                            {% if credit.status.value in ['funds_disbursed'] and credit.loan %}
                                <a href="{{ path('banking_credit_amortization', {id: credit.loan.id}) }}" class="banking__credit-btn banking__credit-btn--primary">{{ tp('banking_credits.active_credits.view_amortization', [], 'banking_credits') }}</a>
                            {% endif %}
                            <a href="{{ path('banking_credit_application_detail', {id: credit.id}) }}" class="banking__credit-btn banking__credit-btn--secondary">{{ tp('banking_credits.active_credits.view_details', [], 'banking_credits') }}</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <!-- Applications History -->
        {% if creditApplications|length > 0 %}
            <div class="banking__section-header">
                <h2 class="banking__section-title">{{ tp('banking_credits.applications.title', [], 'banking_credits') }}</h2>
            </div>

            <div class="banking__operations">
                <table class="banking__table">
                    <thead class="banking__table-head">
                        <tr>
                            <th class="banking__table-th">{{ tp('banking_credits.applications.date', [], 'banking_credits') }}</th>
                            <th class="banking__table-th">{{ tp('banking_credits.applications.credit_type', [], 'banking_credits') }}</th>
                            <th class="banking__table-th">{{ tp('banking_credits.applications.amount', [], 'banking_credits') }}</th>
                            <th class="banking__table-th">{{ tp('banking_credits.labels.duration', [], 'banking_credits') }}</th>
                            <th class="banking__table-th">{{ tp('banking_credits.active_credits.monthly_payment', [], 'banking_credits') }}</th>
                            <th class="banking__table-th">{{ tp('banking_credits.applications.status', [], 'banking_credits') }}</th>
                        </tr>
                    </thead>
                    <tbody class="banking__table-body">
                        {% for application in creditApplications %}
                            <tr class="banking__table-row banking__table-row--clickable" 
                                onclick="window.location.href='{{ path('banking_credit_application_detail', {id: application.id}) }}'">
                                <td class="banking__table-td">{{ application.createdAt|date('d/m/Y') }}</td>
                                <td class="banking__table-td">
                                    <div class="banking__loan-detail">
                                        <div class="banking__loan-name">{{ tp(application.creditType.getLabel(), [], 'credit_step_forms') }}</div>
                                        <div class="banking__loan-ref">{{ application.id|str_pad(6, '0', 'left') }}</div>
                                    </div>
                                </td>
                                <td class="banking__table-td">{{ application.loanAmount|number_format(2, ',', ' ') }} €</td>
                                <td class="banking__table-td">{{ application.duration }} {{ tp('banking_credits.labels.months', [], 'banking_credits') }}</td>
                                <td class="banking__table-td">{{ application.monthlyPayment|number_format(2, ',', ' ') }} €</td>
                                <td class="banking__table-td">
                                    <span class="banking__status {{ application.status.getBadgeClass() }}">
                                        {{ tp(application.status.getLabel(), [], 'enums') }}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if creditApplications|length > 10 %}
                <div class="banking__pagination">
                    <button class="banking__page-btn banking__page-btn--disabled">{{ tp('banking_credits.pagination.previous', [], 'banking_credits') }}</button>
                    <span class="banking__page-info">{{ tp('banking_credits.pagination.page_info', {page: 1, total: (creditApplications|length / 10)|round(0, 'ceil'), count: creditApplications|length}, 'banking_credits') }}</span>
                    <button class="banking__page-btn">{{ tp('banking_credits.pagination.next', [], 'banking_credits') }}</button>
                </div>
            {% endif %}
        {% endif %}

    {% else %}
        <!-- Empty State -->
        <div class="banking__empty-state">
            <div class="banking__empty-icon">
                {{ ux_icon('heroicons:credit-card', {'class': 'banking__empty-icon-svg'}) }}
            </div>
            <h2 class="banking__empty-title">{{ tp('banking_credits.empty_state.title', [], 'banking_credits') }}</h2>
            <p class="banking__empty-description">
                {{ tp('banking_credits.empty_state.message', [], 'banking_credits') }}
            </p>
            <div class="banking__empty-actions">
                <a href="{{ path('credit_application_start') }}" class="banking__action-primary">
                    {{ ux_icon('heroicons:plus', {'class': 'banking__action-icon'}) }}
                    {{ tp('banking_credits.available_credits.apply', [], 'banking_credits') }}
                </a>
                <a href="{{ path('credit_simulation_index') }}" class="banking__credit-btn banking__credit-btn--secondary">
                    {{ ux_icon('heroicons:calculator', {'class': 'banking__action-icon'}) }}
                    {{ tp('banking_credits.available_credits.simulate', [], 'banking_credits') }}
                </a>
            </div>
        </div>
    {% endif %}

</section>

<style>
.banking__table-row--clickable {
    cursor: pointer;
    transition: all 0.2s ease;
}

.banking__table-row--clickable:hover {
    background-color: #f8f9fa;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.banking__table-row--clickable:active {
    transform: translateY(0);
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
}
</style>
