                        {{ ux_icon('heroicons:calculator', {'class': 'credit-cta__button-icon'}) }}
                        {{ tp('credit_page.cta.simulate_button', [], 'credit_page') }}
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

{% block custom_styles %}
<style>
/* =================================================================
   CREDIT DETAIL PAGE - STRUCTURE DE BASE
   ================================================================= */

.credit-detail-page {
    min-height: 100vh;
    background: #fafbfc;
}

/* Credit Detail Hero */
.credit-detail-hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, #1e40af 100%);
    padding: 6rem 0 4rem;
    position: relative;
    overflow: hidden;
}

.credit-detail-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 20% 20%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(16, 185, 129, 0.1) 0%, transparent 50%);
    z-index: 1;
}

.credit-detail-hero__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
}

.credit-detail-hero__breadcrumb {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
}

.credit-detail-hero__breadcrumb a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
}

.credit-detail-hero__breadcrumb a:hover {
    color: white;
}

.credit-detail-hero__breadcrumb span {
    margin: 0 0.5rem;
}

.credit-detail-hero__title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    color: white !important;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    letter-spacing: -0.025em;
    text-transform: uppercase;
    text-align: center;
}

.credit-detail-hero__subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    color: white !important;
    margin-bottom: 3rem;
    line-height: 1.6;
}

.credit-detail-hero__highlights {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
}

.credit-highlight {
    text-align: center;
}

.credit-highlight__value {
    font-size: 2.5rem;
    font-weight: 900;
    color: #fff !important;
    margin-bottom: 0.5rem;
    display: block;
}

.credit-highlight__label {
    font-size: 0.875rem;
    color: white;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
}

.credit-detail-hero__actions {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
}

.credit-detail-hero__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    min-width: 200px;
    justify-content: center;
}

.credit-detail-hero__cta--primary {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
    box-shadow: 0 10px 25px rgba(59, 130, 246, 0.3);
}

.credit-detail-hero__cta--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 35px rgba(59, 130, 246, 0.4);
    color: white;
    text-decoration: none;
}

.credit-detail-hero__cta--secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(20px);
}

.credit-detail-hero__cta--secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
    color: white;
    text-decoration: none;
}

.credit-detail-hero__cta-icon {
    width: 1.25rem;
    height: 1.25rem;
}

/* Credit Detail Content */
.credit-detail-content {
    padding: 6rem 0;
}

.credit-detail-content__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
}

.credit-detail-content__grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
}

/* Credit Detail Section */
.credit-detail-section {
    background: white;
