{# Template pour contrat expiré dans le dashboard #}

<div class="contract-expired">
    <!-- En-tête -->
    <div class="contract-header">
        <h2 class="contract-title">
            {{ ux_icon('heroicons:exclamation-triangle', {'class': 'contract-icon contract-icon--danger'}) }}
            {{ tp('contract_expired.title', [], 'banking_contract') }}
        </h2>
        <p class="contract-subtitle">
            {{ tp('contract_expired.subtitle', [], 'banking_contract') }}
        </p>
    </div>

    <div class="contract-container">
        <!-- Message principal -->
        <div class="expiry-message">
            <div class="message-icon">
                {{ ux_icon('heroicons:x-circle', {'class': 'icon-danger'}) }}
            </div>
            <div class="message-content">
                <h3 class="message-title">{{ tp('contract_expired.deadline_passed', [], 'banking_contract') }}</h3>
                <p class="message-text">
                    {{ tp('contract_expired.expired_message', [], 'banking_contract') }}
                </p>
            </div>
        </div>

        <!-- Détails du contrat -->
        {% if contract %}
        <div class="contract-details">
            <h3 class="details-title">
                {{ ux_icon('heroicons:document-text', {'class': 'section-icon'}) }}
                {{ tp('contract_expired.details_title', [], 'banking_contract') }}
            </h3>
            
            <div class="info-grid">
                <div class="info-card">
                    <span class="info-label">{{ tp('contract_expired.reference_label', [], 'banking_contract') }}</span>
                    <span class="info-value">{{ contract.reference }}</span>
                </div>
                <div class="info-card">
                    <span class="info-label">{{ tp('contract_expired.creation_date_label', [], 'banking_contract') }}</span>
                    <span class="info-value">{{ contract.createdAt|date('d/m/Y à H:i') }}</span>
                </div>
                {% if contract.cardSubscription %}
                <div class="info-card">
                    <span class="info-label">{{ tp('contract_expired.card_type_label', [], 'banking_contract') }}</span>
                    <span class="info-value">{{ contract.cardSubscription.cardType|title }}</span>
                </div>
                <div class="info-card">
                    <span class="info-label">{{ tp('contract_expired.brand_label', [], 'banking_contract') }}</span>
                    <span class="info-value">{{ contract.cardSubscription.cardBrand|title }}</span>
                </div>
                {% endif %}
                {% if contract.expiresAt %}
                <div class="info-card info-card--danger">
                    <span class="info-label">{{ tp('contract_expired.expiry_date_label', [], 'banking_contract') }}</span>
                    <span class="info-value info-value--danger">{{ contract.expiresAt|date('d/m/Y à H:i') }}</span>
                </div>
                {% endif %}
            </div>
        </div>
        {% endif %}

        <!-- Prochaines étapes -->
        <div class="next-steps">
            <h3 class="steps-title">
                {{ ux_icon('heroicons:arrow-path', {'class': 'section-icon'}) }}
                {{ tp('contract_expired.next_steps_title', [], 'banking_contract') }}
            </h3>
            <p class="steps-subtitle">{{ tp('contract_expired.next_steps_subtitle', [], 'banking_contract') }}</p>
            
            <div class="steps-list">
                <div class="step-item">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <h4 class="step-title">{{ tp('contract_expired.step1_title', [], 'banking_contract') }}</h4>
                        <p class="step-description">{{ tp('contract_expired.step1_description', [], 'banking_contract') }}</p>
                    </div>
                </div>
                <div class="step-item">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <h4 class="step-title">{{ tp('contract_expired.step2_title', [], 'banking_contract') }}</h4>
                        <p class="step-description">{{ tp('contract_expired.step2_description', [], 'banking_contract') }}</p>
                    </div>
                </div>
                <div class="step-item">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <h4 class="step-title">{{ tp('contract_expired.step3_title', [], 'banking_contract') }}</h4>
                        <p class="step-description">{{ tp('contract_expired.step3_description', [], 'banking_contract') }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="contract-actions">
            <a href="#" 
               class="action-button action-button--primary" 
               data-banking-tabs-target="tab" 
               data-tab="card-subscription" 
               data-action="click->banking-tabs#switchTab">
                {{ ux_icon('heroicons:plus', {'class': 'button-icon'}) }}
                {{ tp('contract_expired.new_card_request', [], 'banking_contract') }}
            </a>
            <a href="#" 
               class="action-button action-button--secondary"
               data-banking-tabs-target="tab" 
               data-tab="comptes" 
               data-action="click->banking-tabs#switchTab">
                {{ ux_icon('heroicons:arrow-left', {'class': 'button-icon'}) }}
                {{ tp('contract_expired.back_to_accounts', [], 'banking_contract') }}
            </a>
        </div>
    </div>
</div>

