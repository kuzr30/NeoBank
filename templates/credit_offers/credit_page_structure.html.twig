                                        {{ ux_icon('heroicons:phone', {'class': 'credit-detail-contact__icon'}) }}
                                        <span>{{ tp_with_company('credit_page.sidebar.help.phone', [], 'credit_page') }}</span>
                                    </div>
                                    <div class="credit-detail-contact__item">
                                        {{ ux_icon('heroicons:envelope', {'class': 'credit-detail-contact__icon'}) }}
                                        <span>{{ tp_with_company('credit_page.sidebar.help.email', [], 'credit_page') }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {% block sidebar_additional %}
                        <div class="credit-detail-card">
                            <div class="credit-detail-card__header">
                                <h3 class="credit-detail-card__title">{% block sidebar_card_title %}{{ tp('credit_page.sidebar.processing.title', [], 'credit_page') }}{% endblock %}</h3>
                            </div>
                            <div class="credit-detail-card__content">
                                {% block sidebar_card_content %}
