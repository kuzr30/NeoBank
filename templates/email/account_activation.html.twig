{% extends 'email/base_email.html.twig' %}

{% block title %}{{ tp('email_account_activation.title', {}, 'email_account_activation') }}{% endblock %}

{% block content %}
    <h2 class="content-title">{{ tp('email_account_activation.content.greeting', {'firstName': firstName}, 'email_account_activation') }}</h2>
    
    <p class="content-text">
        {{ tp('email_account_activation.content.intro', {}, 'email_account_activation')|raw }}
    </p>

    <div class="info-box">
        <h3 style="margin-top: 0; color: #1976d2;">{{ tp('email_account_activation.content.activation_required.title', {}, 'email_account_activation') }}</h3>
        <p style="margin-bottom: 0; color: #000000;">
            {{ tp('email_account_activation.content.activation_required.description', {}, 'email_account_activation') }}
        </p>
    </div>

    <div class="btn-container" style="text-align:center;margin:50px 0;">
        <a href="{{ activationUrl }}" class="btn" style="display:inline-block;margin:0;padding:22px 45px;background:#2c3e50;color:#ffffff!important;font-size:20px;font-weight:700;line-height:1;text-decoration:none;text-align:center;border-radius:50px;border:none;cursor:pointer;box-shadow:0 15px 35px rgba(44,62,80,0.4);text-transform:uppercase;letter-spacing:1px;transition:all 0.3s ease;">{{ tp('email_account_activation.content.button_text', {}, 'email_account_activation') }}</a>
    </div>

    <div class="warning-box">
        <h3 style="margin-top: 0; color: #f57c00;">{{ tp('email_account_activation.content.warning.title', {}, 'email_account_activation') }}</h3>
        <p style="margin-bottom: 0; color: #000000;">
            {{ tp('email_account_activation.content.warning.description', {}, 'email_account_activation')|raw }}
        </p>
    </div>

    <p class="content-text">
        {{ tp('email_account_activation.content.manual_link', {}, 'email_account_activation') }}
    </p>

    <div style="background-color: #f8f9fa; padding: 15px; border-radius: 8px; margin: 20px 0; font-family: monospace; word-break: break-all; font-size: 14px; color: #000000;">
        {{ activationUrl }}
    </div>

    <div class="success-box">
        <h3 style="margin-top: 0; color: #2e7d32;">{{ tp('email_account_activation.content.success.title', {}, 'email_account_activation') }}</h3>
        <p style="margin-bottom: 0; color: #000000;">
            {{ tp('email_account_activation.content.success.description', {}, 'email_account_activation') }}
        </p>
    </div>

    <p class="content-text">
        {{ tp('email_account_activation.content.security_notice', {}, 'email_account_activation') }}
    </p>

    <p class="content-text" style="margin-bottom: 0;">
        {{ tp('email_account_activation.content.signature', {}, 'email_account_activation')|raw }}
    </p>
{% endblock %}
