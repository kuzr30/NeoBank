{% block stylesheets %}
{{ parent() }}
<style>
/* Page Comptes & Cartes - BEM CSS */
.accounts-cards {
  min-height: 100vh;
  background-color: #f8fafc;
}

/* Hero Section */
.accounts-cards__hero {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  padding: 5rem 0;
  text-align: center;
}

.accounts-cards__hero-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.accounts-cards__hero-title {
  font-size: 3rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  line-height: 1.2;
  color: white;
}

.accounts-cards__hero-subtitle {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  opacity: 0.9;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  color: white;
}

.accounts-cards__hero-cta {
  display: inline-block;
  background-color: white;
  color: #3b82f6;
  padding: 0.875rem 2rem;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.accounts-cards__hero-cta:hover {
  background-color: #f8fafc;
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

/* Products Section */
.accounts-cards__products {
  padding: 5rem 0;
  background-color: #f8fafc;
}

.accounts-cards__products-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.accounts-cards__products-header {
  text-align: center;
  margin-bottom: 4rem;
}

.accounts-cards__products-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 1rem;
}

.accounts-cards__products-subtitle {
  font-size: 1.125rem;
  color: #6b7280;
  max-width: 600px;
  margin: 0 auto;
}

.accounts-cards__products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

/* Product Card */
.product-card {
  background: white;
  border-radius: 12px;
  padding: 2rem;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  border: 1px solid #e5e7eb;
}

.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
}

.product-card__icon {
  width: 4rem;
  height: 4rem;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 1.5rem;
}

.product-card__icon--current {
  background-color: rgba(59, 130, 246, 0.1);
}

.product-card__icon--savings {
  background-color: rgba(34, 197, 94, 0.1);
}

.product-card__icon--credit {
  background-color: rgba(168, 85, 247, 0.1);
}

.product-card__icon svg {
  width: 2rem;
  height: 2rem;
}

.product-card__icon--current svg {
  color: #3b82f6;
}

.product-card__icon--savings svg {
  color: #22c55e;
}

.product-card__icon--credit svg {
  color: #a855f7;
}

.product-card__title {
  font-size: 1.5rem;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 1rem;
}

.product-card__description {
  color: #6b7280;
  margin-bottom: 1.5rem;
  line-height: 1.6;
}

.product-card__features {
  list-style: none;
  padding: 0;
  margin: 0 0 2rem 0;
}

.product-card__feature {
  display: flex;
  align-items: center;
  margin-bottom: 0.75rem;
  font-size: 0.875rem;
  color: #6b7280;
}

.product-card__feature-icon {
  width: 1rem;
  height: 1rem;
  color: #22c55e;
  margin-right: 0.75rem;
  flex-shrink: 0;
}

.product-card__cta {
  width: 100%;
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
  text-align: center;
}

.product-card__cta--current {
  background-color: #3b82f6;
  color: white;
}

.product-card__cta--current:hover {
  background-color: #2563eb;
}

.product-card__cta--savings {
  background-color: #22c55e;
  color: white;
}

.product-card__cta--savings:hover {
  background-color: #16a34a;
}

.product-card__cta--credit {
  background-color: #a855f7;
  color: white;
}

.product-card__cta--credit:hover {
  background-color: #9333ea;
}

/* Features Section */
.accounts-cards__features {
  background: white;
  padding: 5rem 0;
}

.accounts-cards__features-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.accounts-cards__features-header {
  text-align: center;
  margin-bottom: 4rem;
}

.accounts-cards__features-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 1rem;
}

.accounts-cards__features-subtitle {
  font-size: 1.125rem;
  color: #6b7280;
  max-width: 600px;
  margin: 0 auto;
}

.accounts-cards__features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

/* Feature Item */
.feature-item {
  text-align: center;
}

.feature-item__icon {
  width: 4rem;
  height: 4rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1.5rem auto;
}

.feature-item__icon--security {
  background-color: rgba(59, 130, 246, 0.1);
}

.feature-item__icon--simple {
  background-color: rgba(34, 197, 94, 0.1);
}

.feature-item__icon--fast {
  background-color: rgba(245, 158, 11, 0.1);
}

.feature-item__icon--support {
  background-color: rgba(168, 85, 247, 0.1);
}

.feature-item__icon svg {
  width: 2rem;
  height: 2rem;
}

.feature-item__icon--security svg {
  color: #3b82f6;
}

.feature-item__icon--simple svg {
  color: #22c55e;
}

.feature-item__icon--fast svg {
  color: #f59e0b;
}

.feature-item__icon--support svg {
  color: #a855f7;
}

.feature-item__title {
  font-size: 1.125rem;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 0.75rem;
}

.feature-item__description {
  font-size: 0.875rem;
  color: #6b7280;
  line-height: 1.5;
}

/* CTA Section */
.accounts-cards__cta {
  background-color: #1f2937;
  color: white;
  padding: 5rem 0;
  text-align: center;
}

.accounts-cards__cta-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.accounts-cards__cta-title {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: white;
}

.accounts-cards__cta-description {
  font-size: 1.125rem;
  opacity: 0.9;
  margin-bottom: 2rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  color: white;
}

.accounts-cards__cta-buttons {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
}

.accounts-cards__cta-button {
  padding: 0.875rem 2rem;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.accounts-cards__cta-button--primary {
  background-color: #3b82f6;
  color: white;
}

.accounts-cards__cta-button--primary:hover {
  background-color: #1d4ed8;
  transform: translateY(-2px);
}

.accounts-cards__cta-button--secondary {
  border: 2px solid rgba(255, 255, 255, 0.3);
  color: white;
}

.accounts-cards__cta-button--secondary:hover {
  background-color: rgba(255, 255, 255, 0.1);
  transform: translateY(-2px);
}

/* Comparison Section */
.accounts-cards__comparison {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 5rem 0;
}

.accounts-cards__comparison-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.accounts-cards__comparison-header {
  text-align: center;
  margin-bottom: 4rem;
}

.accounts-cards__comparison-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 1rem;
}

.accounts-cards__comparison-subtitle {
  font-size: 1.125rem;
  color: #6b7280;
  max-width: 600px;
  margin: 0 auto;
}

.comparison-table {
  background: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  margin: 0 auto;
  max-width: 900px;
}

.comparison-table__header {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  padding: 2rem;
  text-align: center;
}

.comparison-table__header h3 {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.comparison-table__header p {
  opacity: 0.9;
}

.comparison-table__body {
  padding: 0;
}

.comparison-row {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1fr;
  gap: 0;
  border-bottom: 1px solid #e5e7eb;
  align-items: center;
}

.comparison-row:hover {
  background-color: #f9fafb;
}

.comparison-cell {
  padding: 1.5rem 1rem;
  text-align: center;
}

.comparison-cell:first-child {
  text-align: left;
  font-weight: 600;
  color: #1f2937;
}

.comparison-cell--bankit {
  background-color: rgba(59, 130, 246, 0.05);
  color: #3b82f6;
  font-weight: 700;
}

.comparison-cell--competitor {
  color: #6b7280;
}

.comparison-check {
  color: #22c55e;
  font-size: 1.5rem;
}

.comparison-cross {
  color: #ef4444;
  font-size: 1.5rem;
}

/* Process Section */
.accounts-cards__process {
  background: white;
  padding: 5rem 0;
}

.accounts-cards__process-container {
  max-width: 100%;
  margin: 0 auto;
  padding: 0 1rem;
}

.accounts-cards__process-header {
  text-align: center;
  margin-bottom: 4rem;
}

.accounts-cards__process-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 1rem;
}

.accounts-cards__process-subtitle {
  font-size: 1.125rem;
  color: #6b7280;
  max-width: 600px;
  margin: 0 auto 2rem auto;
}

.accounts-cards__process-time {
  display: inline-block;
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: 50px;
  font-weight: 600;
  font-size: 1rem;
}

.process-steps {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
}

.process-step {
  position: relative;
  background: white;
  border: 2px solid #e5e7eb;
  border-radius: 16px;
  padding: 2.5rem 2rem;
  text-align: center;
  transition: all 0.3s ease;
}

.process-step:hover {
  border-color: #3b82f6;
  transform: translateY(-5px);
  box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.1);
}

.process-step__number {
  position: absolute;
  top: -1.5rem;
  left: 50%;
  transform: translateX(-50%);
  width: 3rem;
  height: 3rem;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 1.25rem;
}

.process-step__icon {
  width: 4rem;
  height: 4rem;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1.5rem auto;
}

.process-step__icon svg {
  width: 2rem;
  height: 2rem;
  color: #3b82f6;
}

.process-step__title {
  font-size: 1.25rem;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 1rem;
}

.process-step__description {
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 1.5rem;
}

.process-step__time {
  background: rgba(34, 197, 94, 0.1);
  color: #16a34a;
  padding: 0.5rem 1rem;
  border-radius: 50px;
  font-weight: 600;
  font-size: 0.875rem;
}

/* Security Section */
.accounts-cards__security {
  background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
  color: white;
  padding: 5rem 0;
}

.accounts-cards__security-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.accounts-cards__security-header {
  text-align: center;
  margin-bottom: 4rem;
}

.accounts-cards__security-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: white;
  margin-bottom: 1rem;
}

.accounts-cards__security-subtitle {
  font-size: 1.125rem;
  color: rgba(255, 255, 255, 0.8);
  max-width: 600px;
  margin: 0 auto;
}

.security-features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-bottom: 4rem;
}

.security-feature {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16px;
  padding: 2rem;
  text-align: center;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.security-feature:hover {
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-5px);
}

.security-feature__icon {
  width: 4rem;
  height: 4rem;
  background: rgba(59, 130, 246, 0.2);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1.5rem auto;
}

.security-feature__icon svg {
  width: 2rem;
  height: 2rem;
  color: #60a5fa;
}

.security-feature__title {
  font-size: 1.25rem;
  font-weight: 700;
  color: white;
  margin-bottom: 1rem;
}

.security-feature__description {
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

.security-certifications {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 3rem;
  flex-wrap: wrap;
  margin-top: 3rem;
}

.security-certification {
  display: flex;
  align-items: center;
  gap: 1rem;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 1rem 1.5rem;
}

.security-certification__icon {
  width: 2.5rem;
  height: 2.5rem;
  background: rgba(34, 197, 94, 0.2);
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.security-certification__icon svg {
  width: 1.5rem;
  height: 1.5rem;
  color: #4ade80;
}

.security-certification__text {
  color: white;
  font-weight: 600;
}

/* Responsive */
@media (max-width: 768px) {
  .accounts-cards__hero-title {
    font-size: 2rem;
  }
  
  .accounts-cards__hero-subtitle {
    font-size: 1.125rem;
  }
  
  .accounts-cards__products-title,
  .accounts-cards__features-title,
  .accounts-cards__cta-title {
    font-size: 2rem;
  }
  
  .accounts-cards__products-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .accounts-cards__cta-buttons {
    flex-direction: column;
    align-items: center;
  }
  
  .accounts-cards__cta-button {
    width: 100%;
    max-width: 300px;
  }
}

@media (max-width: 480px) {
  .accounts-cards__hero {
    padding: 3rem 0;
  }
  
  .accounts-cards__products,
  .accounts-cards__features,
  .accounts-cards__cta {
    padding: 3rem 0;
  }
  
  .product-card {
    padding: 1.5rem;
  }
  
  .accounts-cards__hero-title {
    font-size: 1.75rem;
  }
}

/* Services Section Styles */
.accounts-cards__services {
    background: linear-gradient(to bottom, #f8fafc, #e2e8f0);
    padding: 80px 0;
}

.accounts-cards__services-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.accounts-cards__services-header {
    text-align: center;
    margin-bottom: 60px;
}

.accounts-cards__services-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 20px;
}

.accounts-cards__services-subtitle {
    font-size: 1.2rem;
    color: #6b7280;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
}

.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
    margin-top: 50px;
}

.service-item {
    background: white;
    padding: 40px 30px;
    border-radius: 20px;
    box-shadow: 0 4px 25px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
    position: relative;
    overflow: hidden;
}

.service-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #3b82f6, #8b5cf6);
    transition: all 0.3s ease;
}

.service-item:hover::before {
    left: 0;
}

.service-item:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
}

.service-item__icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 25px;
    color: white;
}

.service-item__icon svg {
    width: 30px;
    height: 30px;
}

.service-item__title {
    font-size: 1.4rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 15px;
}

.service-item__description {
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 20px;
}

.service-item__features {
    list-style: none;
    padding: 0;
    margin: 0;
}

.service-item__features li {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    color: #374151;
    font-size: 0.95rem;
}

.service-item__features li::before {
    content: '✓';
    color: #10b981;
    font-weight: bold;
    margin-right: 10px;
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ecfdf5;
    border-radius: 50%;
    font-size: 0.8rem;
}

/* Benefits Section Styles */
.accounts-cards__benefits {
    background: linear-gradient(135deg, #1e3a8a 0%, #3730a3 50%, #581c87 100%);
    padding: 80px 0;
    position: relative;
    overflow: hidden;
}

.accounts-cards__benefits::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M50 5L93.3 25v50L50 95 6.7 75V25z' fill='none' stroke='%23ffffff' stroke-width='0.5' stroke-opacity='0.1'/%3E%3C/svg%3E") repeat;
    opacity: 0.3;
}

