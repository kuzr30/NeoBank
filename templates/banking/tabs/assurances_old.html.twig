</style>

<section class="banking__content" data-tab="assurances">
    <!-- Insurance Statistics -->
    <div class="banking__insurance-summary">
        <div class="banking__insurance-stat">
            <div class="banking__insurance-stat-value">{{ statistiques.contratsActifs|default(0) }}</div>
            <div class="banking__insurance-stat-label">{{ tp('banking_insurance.statistics.active_contracts', [], 'banking_insurance') }}</div>
        </div>
        <div class="banking__insurance-stat">
            <div class="banking__insurance-stat-value">{{ statistiques.primeMensuelleTotal|default(0) }}€</div>
            <div class="banking__insurance-stat-label">{{ tp('banking_insurance.statistics.monthly_premium', [], 'banking_insurance') }}</div>
        </div>
        <div class="banking__insurance-stat">
            <div class="banking__insurance-stat-value">{{ statistiques.typesAssurance|default(0) }}</div>
            <div class="banking__insurance-stat-label">{{ tp('banking_insurance.statistics.insurance_types', [], 'banking_insurance') }}</div>
        </div>
        <div class="banking__insurance-stat">
            <div class="banking__insurance-stat-value">{% if statistiques.contratsExpirant is not empty %}{{ statistiques.contratsExpirant }}{% else %}-{% endif %}</div>
            <div class="banking__insurance-stat-label">{{ tp('banking_insurance.statistics.days_until_renewal', [], 'banking_insurance') }}</div>
        </div>
    </div>

    <!-- Active Insurance Contracts -->
    {% if contratsActifs is defined and contratsActifs is not empty %}
        <div class="banking__section-header">
            <h2 class="banking__section-title">{{ tp('banking_insurance.contracts.title', [], 'banking_insurance') }}</h2>
        </div>

        <div class="banking__insurance-grid">
            {% for contrat in contratsActifs %}
                <div class="banking__insurance-card">
                    <div class="banking__insurance-header">
                        <div class="banking__insurance-icon banking__insurance-icon--{{ contrat.typeAssurance.value }}">
                            {% if contrat.typeAssurance.value == 'auto' %}
                                {{ ux_icon('heroicons:truck', {'class': 'banking__insurance-icon-svg'}) }}
                            {% elseif contrat.typeAssurance.value == 'habitation' %}
                                {{ ux_icon('heroicons:home', {'class': 'banking__insurance-icon-svg'}) }}
                            {% elseif contrat.typeAssurance.value == 'sante' %}
                                {{ ux_icon('heroicons:heart', {'class': 'banking__insurance-icon-svg'}) }}
                            {% elseif contrat.typeAssurance.value == 'vie' %}
                                {{ ux_icon('heroicons:user', {'class': 'banking__insurance-icon-svg'}) }}
                            {% else %}
                                {{ ux_icon('heroicons:shield-check', {'class': 'banking__insurance-icon-svg'}) }}
                            {% endif %}
                        </div>
                        <div class="banking__insurance-info">
                            <h3 class="banking__insurance-name">{{ contrat.typeAssurance.label }}</h3>
                            <p class="banking__insurance-reference">{{ tp('banking_insurance.contracts.contract_number', [], 'banking_insurance') }} {{ contrat.numeroContrat }}</p>
                            {% if contrat.demandeDevis %}
                                <p class="banking__insurance-property">{{ contrat.demandeDevis.nom }} {{ contrat.demandeDevis.prenom }}</p>
                            {% endif %}
                        </div>
                        <div class="banking__insurance-status banking__insurance-status--{{ contrat.statut.value }}">
                            {% if contrat.statut.value == 'actif' %}
                                {{ ux_icon('heroicons:check-circle', {'class': 'banking__insurance-status-icon'}) }}
                                {{ tp('banking_insurance.contracts.active_status', [], 'banking_insurance') }}
                            {% elseif contrat.statut.value == 'suspendu' %}
                                {{ ux_icon('heroicons:pause-circle', {'class': 'banking__insurance-status-icon'}) }}
                                {{ tp('banking_insurance.contracts.suspended_status', [], 'banking_insurance') }}
                            {% elseif contrat.statut.value == 'expire' %}
                                {{ ux_icon('heroicons:x-circle', {'class': 'banking__insurance-status-icon'}) }}
                                {{ tp('banking_insurance.contracts.expired_status', [], 'banking_insurance') }}
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="banking__insurance-coverage">
                        {% if contrat.primeMensuelle %}
                            <div class="banking__insurance-coverage-item">
                                <span class="banking__insurance-coverage-label">{{ tp('banking_insurance.coverage.monthly_premium', [], 'banking_insurance') }}</span>
                                <span class="banking__insurance-coverage-value">{{ contrat.primeMensuelle }}€</span>
                            </div>
                        {% endif %}
                        {% if contrat.primeAnnuelle %}
                            <div class="banking__insurance-coverage-item">
                                <span class="banking__insurance-coverage-label">{{ tp('banking_insurance.coverage.annual_premium', [], 'banking_insurance') }}</span>
                                <span class="banking__insurance-coverage-value">{{ contrat.primeAnnuelle }}€</span>
                            </div>
                        {% endif %}
                        {% if contrat.montantCouverture %}
                            <div class="banking__insurance-coverage-item">
                                <span class="banking__insurance-coverage-label">{{ tp('banking_insurance.coverage.coverage_amount', [], 'banking_insurance') }}</span>
                                <span class="banking__insurance-coverage-value">{{ contrat.montantCouverture }}€</span>
                            </div>
                        {% endif %}
                    </div>

                    <div class="banking__insurance-details">
                        {% if contrat.dateFinPrevue %}
                            <div class="banking__insurance-detail">
                                <span class="banking__insurance-detail-label">{{ tp('banking_insurance.details.expiration_date', [], 'banking_insurance') }}</span>
                                <span class="banking__insurance-detail-value">{{ contrat.dateFinPrevue|date('d/m/Y') }}</span>
                            </div>
                        {% endif %}
                        {% if contrat.franchise %}
                            <div class="banking__insurance-detail">
                                <span class="banking__insurance-detail-label">{{ tp('banking_insurance.details.deductible', [], 'banking_insurance') }}</span>
                                <span class="banking__insurance-detail-value">{{ contrat.franchise }}€</span>
                            </div>
                        {% endif %}
                        {% if contrat.prochaineEcheance %}
                            <div class="banking__insurance-detail">
                                <span class="banking__insurance-detail-label">{{ tp('banking_insurance.details.next_payment', [], 'banking_insurance') }}</span>
                                <span class="banking__insurance-detail-value">{{ contrat.prochaineEcheance|date('d/m/Y') }}</span>
                            </div>
                        {% endif %}
                        <div class="banking__insurance-detail">
                            <span class="banking__insurance-detail-label">{{ tp('banking_insurance.details.contract_start', [], 'banking_insurance') }}</span>
                            <span class="banking__insurance-detail-value">{{ contrat.dateDebut|date('d/m/Y') }}</span>
                        </div>
                    </div>

                    <div class="banking__insurance-actions">
                        {% if contrat.statut.value == 'actif' %}
                            <button class="banking__insurance-btn banking__insurance-btn--primary">{{ tp('banking_insurance.actions.declare_claim', [], 'banking_insurance') }}</button>
                            <button class="banking__insurance-btn banking__insurance-btn--secondary">{{ tp('banking_insurance.actions.certificate', [], 'banking_insurance') }}</button>
                        {% elseif contrat.statut.value == 'suspendu' %}
                            <button class="banking__insurance-btn banking__insurance-btn--primary">{{ tp('banking_insurance.actions.reactivate', [], 'banking_insurance') }}</button>
                            <button class="banking__insurance-btn banking__insurance-btn--secondary">{{ tp('banking_insurance.actions.details', [], 'banking_insurance') }}</button>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- No Active Contracts -->
        <div class="banking__section-header">
            <h2 class="banking__section-title">{{ tp('banking_insurance.contracts.title', [], 'banking_insurance') }}</h2>
        </div>
        
        <div class="banking__empty-state">
            <div class="banking__empty-state-icon">
                {{ ux_icon('heroicons:shield-exclamation', {'class': 'banking__empty-state-icon-svg'}) }}
            </div>
            <h3 class="banking__empty-state-title">{{ tp('banking_insurance.empty_state.no_contracts_title', [], 'banking_insurance') }}</h3>
            <p class="banking__empty-state-description">{{ tp('banking_insurance.empty_state.no_contracts_description', [], 'banking_insurance') }}</p>
            <a href="{{ path('services_devis_form', {'type': 'auto'}) }}" class="banking__empty-state-btn">{{ tp('banking_insurance.empty_state.request_quote', [], 'banking_insurance') }}</a>
        </div>
    {% endif %}

    <!-- Available Insurance Types -->
    {% if opportunites is defined and opportunites is not empty %}
        <div class="banking__section-header">
            <h2 class="banking__section-title">{{ tp('banking_insurance.available_types.title', [], 'banking_insurance') }}</h2>
            <p class="banking__section-subtitle">{{ tp('banking_insurance.available_types.subtitle', [], 'banking_insurance') }}</p>
        </div>

        <div class="banking__insurance-offers">
            {% for insuranceType in opportunites %}
                <div class="banking__insurance-offer">
                    <div class="banking__insurance-offer-icon">
                        {% if insuranceType.type.value == 'auto' %}
                            {{ ux_icon('heroicons:truck', {'class': 'banking__insurance-offer-icon-svg'}) }}
                        {% elseif insuranceType.type.value == 'habitation' %}
                            {{ ux_icon('heroicons:home', {'class': 'banking__insurance-offer-icon-svg'}) }}
                        {% elseif insuranceType.type.value == 'sante' %}
                            {{ ux_icon('heroicons:heart', {'class': 'banking__insurance-offer-icon-svg'}) }}
                        {% elseif insuranceType.type.value == 'vie' %}
                            {{ ux_icon('heroicons:user', {'class': 'banking__insurance-offer-icon-svg'}) }}
                        {% else %}
                            {{ ux_icon('heroicons:briefcase', {'class': 'banking__insurance-offer-icon-svg'}) }}
                        {% endif %}
                    </div>
                    <div class="banking__insurance-offer-content">
                        <h3 class="banking__insurance-offer-title">{{ insuranceType.label }}</h3>
                        <p class="banking__insurance-offer-description">{{ tp('banking_insurance.types.' ~ insuranceType.type.value ~ '.description', [], 'banking_insurance') }}</p>
                    </div>
                    <div class="banking__insurance-offer-actions">
                        <a href="{{ path('services_devis_form', {'type': insuranceType.type.value}) }}" class="banking__insurance-offer-btn">{{ tp('banking_insurance.available_types.get_quote', [], 'banking_insurance') }}</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}


