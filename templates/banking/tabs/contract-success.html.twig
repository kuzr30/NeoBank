{# Template pour la confirmation de signature de contrat dans le dashboard #}

<div class="contract-success-tab">
    <!-- En-tête de succès -->
    <div class="success-header">
        <div class="success-icon">
            {{ ux_icon('heroicons:check-circle', {'class': 'success-icon-svg'}) }}
        </div>
        <h2 class="success-title">{{ tp('contract_success.title', [], 'banking_contract') }}</h2>
        <p class="success-subtitle">
            {{ tp('contract_success.subtitle', [], 'banking_contract') }} {{ contract.cardSubscription.cardType|title }} {{ contract.cardSubscription.cardBrand|title }}
        </p>
    </div>

    <!-- Récapitulatif du contrat -->
    <div class="contract-recap">
        <h3 class="section-title">
            {{ ux_icon('heroicons:document-text', {'class': 'section-icon'}) }}
            {{ tp('contract_success.recap_title', [], 'banking_contract') }}
        </h3>
        
        <div class="recap-grid">
            <div class="recap-item">
                <span class="recap-label">{{ tp('contract_success.reference_label', [], 'banking_contract') }}</span>
                <span class="recap-value">{{ contract.reference }}</span>
            </div>
            <div class="recap-item">
                <span class="recap-label">{{ tp('contract_success.card_type_label', [], 'banking_contract') }}</span>
                <span class="recap-value">{{ contract.cardSubscription.cardType|title }}</span>
            </div>
            <div class="recap-item">
                <span class="recap-label">{{ tp('contract_success.brand_label', [], 'banking_contract') }}</span>
                <span class="recap-value">{{ contract.cardSubscription.cardBrand|title }}</span>
            </div>
   
        </div>
    </div>


    <!-- Prochaines étapes -->
    <div class="next-steps">
        <h3 class="section-title">
            {{ ux_icon('heroicons:list-bullet', {'class': 'section-icon'}) }}
            {{ tp('contract_success.next_steps_title', [], 'banking_contract') }}
        </h3>
        
        <div class="steps-list">
            <div class="step-item">
                <div class="step-number">1</div>
                <div class="step-content">
                    <strong>{{ tp('contract_success.step1_title', [], 'banking_contract') }}</strong>
                    <p>{{ tp('contract_success.step1_description', [], 'banking_contract') }}</p>
                </div>
            </div>

            <div class="step-item">
                <div class="step-number">2</div>
                <div class="step-content">
                    <strong>{{ tp('contract_success.step2_title', [], 'banking_contract') }}</strong>
                    <p>{{ tp('contract_success.step2_description', [], 'banking_contract') }}</p>
                </div>
            </div>

            <div class="step-item">
                <div class="step-number">3</div>
                <div class="step-content">
                    <strong>{{ tp('contract_success.step3_title', [], 'banking_contract') }}</strong>
                    <p>{{ tp('contract_success.step3_description', [], 'banking_contract') }}</p>
                </div>
            </div>

            <div class="step-item">
                <div class="step-number">4</div>
                <div class="step-content">
                    <strong>{{ tp('contract_success.step4_title', [], 'banking_contract') }}</strong>
                    <p>{{ tp('contract_success.step4_description', [], 'banking_contract') }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="success-actions">
        <a href="{{ path('banking_dashboard', {activeTab: 'cartes'}) }}" class="btn btn-primary">
            {{ ux_icon('heroicons:credit-card', {'class': 'btn-icon'}) }}
            {{ tp('contract_success.view_cards', [], 'banking_contract') }}
        </a>
    </div>

    <!-- Notification email -->
    <div class="email-notification">
        {{ ux_icon('heroicons:envelope', {'class': 'notification-icon'}) }}
        <div class="notification-text">
            <strong>{{ tp('contract_success.email_confirmation', [], 'banking_contract') }}</strong> {{ app.user.email }}
        </div>
    </div>
</div>

