{% extends 'email/base_email.html.twig' %}

{% block title %}{{ tp('email_credit_rejected.title', {}, 'email_credit_rejected') }}{% endblock %}

{% block content %}
    <h2 class="content-title">{{ tp('email_credit_rejected.content.page_title', {}, 'email_credit_rejected') }}</h2>
    
    <p class="content-text">
        {{ tp('email_credit_rejected.content.greeting', {customerName: customerName}, 'email_credit_rejected')|raw }}
    </p>

    <div class="error-box">
        <h3 class="box-title">{{ tp('email_credit_rejected.content.decision_section.title', {}, 'email_credit_rejected') }}</h3>
        <p class="box-text">
            {{ tp('email_credit_rejected.content.decision_section.message', {loanAmount: loanAmount|number_format(2, ',', ' ')}, 'email_credit_rejected')|raw }}
        </p>
    </div>

    <div class="info-box">
        <h3 class="box-title">{{ tp('email_credit_rejected.content.context_section.title', {}, 'email_credit_rejected') }}</h3>
        <p class="box-text">
            {{ tp('email_credit_rejected.content.context_section.explanation', {}, 'email_credit_rejected') }}
        </p>
    </div>

    <div class="success-box">
        <h3 class="box-title">{{ tp('email_credit_rejected.content.alternatives_section.title', {}, 'email_credit_rejected') }}</h3>
        
        <p class="box-text">
            <strong>{{ tp('email_credit_rejected.content.alternatives_section.revised_request.title', {}, 'email_credit_rejected') }}</strong><br>
            {{ tp('email_credit_rejected.content.alternatives_section.revised_request.description', {}, 'email_credit_rejected') }}
        </p>

        <p class="box-text">
            <strong>{{ tp('email_credit_rejected.content.alternatives_section.personalized_advice.title', {}, 'email_credit_rejected') }}</strong><br>
            {{ tp('email_credit_rejected.content.alternatives_section.personalized_advice.description', {}, 'email_credit_rejected') }}
        </p>

        <p class="box-text" style="margin-bottom: 0;">
            <strong>{{ tp('email_credit_rejected.content.alternatives_section.profile_improvement.title', {}, 'email_credit_rejected') }}</strong><br>
            {{ tp('email_credit_rejected.content.alternatives_section.profile_improvement.description', {}, 'email_credit_rejected') }}
        </p>
    </div>

    <div class="btn-container" style="text-align:center;margin:50px 0;">
        <a href="{{ url('home_index') }}" class="btn" style="display:inline-block;margin:0;padding:22px 45px;background:#2c3e50;color:#ffffff!important;font-size:20px;font-weight:700;line-height:1;text-decoration:none;text-align:center;border-radius:50px;border:none;cursor:pointer;box-shadow:0 15px 35px rgba(44,62,80,0.4);text-transform:uppercase;letter-spacing:1px;transition:all 0.3s ease;">{{ tp('email_credit_rejected.content.contact_section.button_text', {}, 'email_credit_rejected') }}</a>
    </div>

    <div class="warning-box">
        <h3 class="box-title">{{ tp('email_credit_rejected.content.future_section.title', {}, 'email_credit_rejected') }}</h3>
        <p class="box-text" style="margin-bottom: 0;">
            {{ tp('email_credit_rejected.content.future_section.message', {}, 'email_credit_rejected') }}
        </p>
    </div>

    <p class="content-text">
        {{ tp('email_credit_rejected.content.thanks_message', {}, 'email_credit_rejected') }}
    </p>

    <p class="footer-text">
        {{ tp('email_credit_rejected.content.footer', {}, 'email_credit_rejected')|raw }}
    </p>
{% endblock %}
