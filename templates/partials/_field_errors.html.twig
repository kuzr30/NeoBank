{# Partial pour afficher les erreurs d'un champ de formulaire #}
{% if field.vars.errors|length > 0 %}
  <div class="form-field-errors">
    {% for error in field.vars.errors %}
      <div class="form-field-error">
        <twig:ux:icon name="heroicons:exclamation-circle" class="form-field-error__icon" />
        <span class="form-field-error__message">{{ error.message }}</span>
      </div>
    {% endfor %}
  </div>
{% endif %}

<style>
.form-field-errors {
  margin-top: 0.375rem;
}

.form-field-error {
  display: flex;
  align-items: center;
  color: #dc2626;
  font-size: 0.8125rem;
  line-height: 1.4;
  margin-bottom: 0.25rem;
}

.form-field-error:last-child {
  margin-bottom: 0;
}

.form-field-error__icon {
  width: 1rem;
  height: 1rem;
  margin-right: 0.375rem;
  flex-shrink: 0;
}

.form-field-error__message {
  flex: 1;
}

/* Style pour les champs avec erreur */
.form-field--error .form-field__input,
.form-field--error .form-field__select,
.form-field--error .form-field__textarea {
  border-color: #dc2626 !important;
  box-shadow: 0 0 0 1px #dc2626 !important;
}

.form-field--error .form-field__input:focus,
.form-field--error .form-field__select:focus,
.form-field--error .form-field__textarea:focus {
  border-color: #dc2626 !important;
  box-shadow: 0 0 0 2px rgba(220, 38, 38, 0.2) !important;
}

/* Animation d'apparition des erreurs */
.form-field-errors {
  animation: fadeInUp 0.2s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(0.5rem);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>
