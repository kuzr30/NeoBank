                            {{ ux_icon('heroicons:folder-open', {'class': 'credit-detail-section__icon'}) }}
                            {% block section_5_title %}{{ tp('credit_page.sections.section_5.title', [], 'credit_page') }}{% endblock %}
                        </h2>
                        <div class="credit-detail-section__content">
                            {% block section_5_content %}
