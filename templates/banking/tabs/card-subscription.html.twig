{# Template pour l'onglet de souscription de carte #}

<div class="subscription-page">
    <div class="subscription-page__container">
        {# En-tête de la page #}
        <div class="subscription-page__header">
            <h1 class="subscription-page__title">
                {{ tp('banking_card_subscription_controller.ui.confirm_card_title', [], 'banking_card_subscription_controller') }} {{ cardInfo.title }}
            </h1>
            <p class="subscription-page__subtitle">
                {{ cardInfo.description }}
            </p>
              
        </div>

        {# Contenu principal en 2 colonnes #}
        <div class="subscription-grid">
            {# COLONNE 1 - Carte + Plafonds #}
            <div class="column column--left">
                <div class="card-preview-container">
                    <div class="card-preview card-preview--{{ cardType }}">
                        <div class="card-preview__header">
                            <div class="card-preview__logo">
                                {% if cardBrand == 'mastercard' %}
                                    <i class="fab fa-cc-mastercard"></i>
                                {% else %}
                                    <i class="fab fa-cc-visa"></i>
                                {% endif %}
                            </div>
                            <div class="card-preview__type">{{ cardType|upper }}</div>
                        </div>
                        <div class="card-preview__chip">
                            <div class="card-chip"></div>
                        </div>
                        <div class="card-preview__number">•••• •••• •••• ••••</div>
                        <div class="card-preview__holder">{{ app.user.firstName|upper }} {{ app.user.lastName|upper }}</div>
                    </div>
                </div>
                
                <div class="card-limits">
                    <h3 class="section-title">{{ tp('banking_card_subscription_controller.ui.limits_title', [], 'banking_card_subscription_controller') }}</h3>
                    <ul class="limits-list">
                        {% for limit in cardInfo.limits %}
                            <li class="limits-item">
                                <i class="fas fa-info-circle"></i>
                                {{ limit }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            {# COLONNE 2 - Prix + Avantages + Boutons #}
            <div class="column column--right">
                <div class="card-features">
                    <h3 class="section-title">{{ tp('banking_card_subscription_controller.ui.advantages_title', [], 'banking_card_subscription_controller') }}</h3>
                    <ul class="features-list">
                        {% for feature in cardInfo.features %}
                            <li class="features-item">
                                <i class="fas fa-check"></i>
                                {{ feature }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="action-buttons">
                    <form method="POST" style="flex: 1;">
                        <button type="submit" class="btn btn--primary btn--half">
                            <i class="fas fa-credit-card"></i>
                            {{ tp('banking_card_subscription_controller.ui.request_card_button', [], 'banking_card_subscription_controller') }}
                        </button>
                    </form>
                    
                    <a href="{{ path('app_banking_card_index') }}" class="btn btn--secondary btn--half">
                        <i class="fas fa-times"></i>
                        {{ tp('banking_card_subscription_controller.ui.cancel_button', [], 'banking_card_subscription_controller') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
