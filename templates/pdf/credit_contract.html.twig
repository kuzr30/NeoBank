                <th>{{ 'credit_contract.chapter_three.table_characteristics'|trans({}, 'credit_contract', _locale) }}</th>
                <th>{{ 'credit_contract.chapter_three.table_values'|trans({}, 'credit_contract', _locale) }}</th>
