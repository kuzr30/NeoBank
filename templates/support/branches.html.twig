<style>
/* Hero Section */
.hero {
    background: linear-gradient(135deg, #059669 0%, #10b981 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
}

.hero__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}

.hero__title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
}

.hero__subtitle {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
}

/* Branches Section */
.branches-details {
    padding: 4rem 0;
    background: #f8fafc;
}

.branches-details__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}

.branches-details__title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 3rem;
}

/* Common Section Styles */
.branch-locator, .branch-services, .main-branches, .appointment-section, .contact-emergency {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.branch-locator__header, .branch-services__header, .main-branches__header, .appointment-section__header, .contact-emergency__header {
    text-align: center;
    margin-bottom: 2rem;
}

.branch-locator__icon, .branch-services__icon, .main-branches__icon, .appointment-section__icon, .contact-emergency__icon {
    width: 1.5rem;
    height: 1.5rem;
    color: #059669;
    margin: 0 auto 1rem;
    display: block;
}

.branch-locator__title, .branch-services__title, .main-branches__title, .appointment-section__title, .contact-emergency__title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin: 0 0 0.5rem 0;
}

.branch-locator__description, .branch-services__description, .main-branches__description, .appointment-section__description, .contact-emergency__description {
    color: #6b7280;
    margin: 0;
}

/* Locator Search */
.branch-locator__search {
    max-width: 600px;
    margin: 0 auto;
}

.search-box {
    display: flex;
    align-items: center;
    background: #f8fafc;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    padding: 0.75rem 1rem;
    gap: 0.75rem;
}

.search-box__icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #6b7280;
    flex-shrink: 0;
}

.search-box__input {
    flex: 1;
    border: none;
    background: none;
    font-size: 1rem;
    outline: none;
    color: #374151;
}

.search-box__button {
    background: #059669;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-weight: 500;
    cursor: pointer;
}

.search-box__button:hover {
    background: #047857;
}

/* Services Grid */
.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
}

.service-item {
    background: #f8fafc;
    border-radius: 12px;
    padding: 1.5rem;
    border: 1px solid #e5e7eb;
}

.service-item__header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
}

.service-item__icon {
    width: 1.5rem;
    height: 1.5rem;
    color: #059669;
    flex-shrink: 0;
}

.service-item__title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
    margin: 0;
}

.service-item__description {
    color: #374151;
    margin: 0 0 0.75rem 0;
    font-weight: 500;
}

.service-item__details {
    color: #6b7280;
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.5;
}

/* Branches Grid */
.branches-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 1.5rem;
}

.branch-card {
    background: #f8fafc;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid #e5e7eb;
}

.branch-card__header {
    background: linear-gradient(135deg, #059669, #10b981);
    color: white;
    padding: 1.5rem;
    text-align: center;
}

.branch-card__name {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
}

.branch-card__info {
    padding: 1.5rem;
}

.branch-info {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1rem;
}

.branch-info:last-child {
    margin-bottom: 0;
}

.branch-info__icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #059669;
    flex-shrink: 0;
    margin-top: 0.125rem;
}

.branch-info__text {
    color: #374151;
    font-size: 0.9rem;
    line-height: 1.5;
}

.branch-info__hours {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.branch-info__hours span {
    color: #374151;
    font-size: 0.9rem;
    line-height: 1.3;
}

/* Appointment Options */
.appointment-options {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2rem;
}

.appointment-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: #f8fafc;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
}

.appointment-option__icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #059669;
}

.appointment-option__text {
    color: #374151;
    font-weight: 500;
}

.appointment-reasons h4 {
    color: #1f2937;
    margin: 0 0 1rem 0;
    text-align: center;
}

.reasons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 0.75rem;
}

.reason-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: #f8fafc;
    padding: 0.75rem;
    border-radius: 8px;
}

.reason-item__icon {
    width: 1rem;
    height: 1rem;
    color: #10b981;
    flex-shrink: 0;
}

.reason-item__text {
    color: #374151;
    font-size: 0.9rem;
}

/* Contact Grid */
.contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
}

.contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: #f8fafc;
    padding: 1rem;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
}

.contact-item.emergency {
    background: #fef2f2;
    border-color: #fecaca;
}

.contact-item__icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #059669;
    flex-shrink: 0;
}

.contact-item.emergency .contact-item__icon {
    color: #dc2626;
}

.contact-item__text {
    color: #374151;
    font-size: 0.9rem;
    line-height: 1.4;
}

/* Responsive */
@media (max-width: 768px) {
    .hero__title {
        font-size: 2rem;
    }
    
    .hero__subtitle {
        font-size: 1rem;
    }
    
    .branches-details__title {
        font-size: 2rem;
    }
    
    .branch-locator, .branch-services, .main-branches, .appointment-section, .contact-emergency {
        padding: 1.5rem;
    }
    
    .services-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    .branches-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    .appointment-options {
        flex-direction: column;
        gap: 1rem;
    }
    
    .contact-grid {
        grid-template-columns: 1fr;
        gap: 0.75rem;
    }
    
    .reasons-grid {
        grid-template-columns: 1fr;
        gap: 0.5rem;
    }
}
</style>
{% endblock %}
