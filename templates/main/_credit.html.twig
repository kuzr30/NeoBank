        <div class="home__credit-card home__credit-card--immobilier">
          <div class="home__credit-card-header">
            <div class="home__credit-card-icon">
              {{ ux_icon('heroicons:home', {'class': 'home__credit-card-icon-svg'}) }}
            </div>
            <h3>{{ tp('credit.types.mortgage.title') }}</h3>
          </div>
          <div class="home__credit-card-content">
            <div class="home__credit-card-amount">
              <span>{{ tp('credit.types.mortgage.amount') }}</span>
            </div>
            <div class="home__credit-card-rate">
              <span class="home__credit-rate-from">{{ tp('credit.types.mortgage.rate_from') }}</span>
              <span class="home__credit-rate-value">{{ credit_rate('immobilier') }}%</span>
            </div>
            <ul class="home__credit-card-features">
              {% for feature in tp('credit.types.mortgage.features') %}
                <li>{{ feature }}</li>
              {% endfor %}
            </ul>
           
          </div>
          <a href="{{ path('credit_offers_home_loan') }}" class="home__credit-card-btn">{{ tp('credit.button') }}</a>
        </div>

        <div class="home__credit-card home__credit-card--auto">
          <div class="home__credit-card-header">
            <div class="home__credit-card-icon">
              {{ ux_icon('heroicons:truck', {'class': 'home__credit-card-icon-svg'}) }}
            </div>
            <h3>{{ tp('credit.types.auto.title') }}</h3>
          </div>
          <div class="home__credit-card-content">
            <div class="home__credit-card-amount">
              <span>{{ tp('credit.types.auto.amount') }}</span>
            </div>
            <div class="home__credit-card-rate">
              <span class="home__credit-rate-from">{{ tp('credit.types.auto.rate_from') }}</span>
              <span class="home__credit-rate-value">{{ credit_rate('auto') }}%</span>
            </div>
            <ul class="home__credit-card-features">
              {% for feature in tp('credit.types.auto.features') %}
                <li>{{ feature }}</li>
              {% endfor %}
            </ul>

          </div>
          <a href="{{ path('credit_offers_auto_loan') }}" class="home__credit-card-btn">{{ tp('credit.button') }}</a>
        </div>

        <div class="home__credit-card home__credit-card--personnel">
          <div class="home__credit-card-header">
            <div class="home__credit-card-icon">
              {{ ux_icon('heroicons:user-circle', {'class': 'home__credit-card-icon-svg'}) }}
            </div>
            <h3>{{ tp('credit.types.personal.title') }}</h3>
          </div>
          <div class="home__credit-card-content">
            <div class="home__credit-card-amount">
              <span>{{ tp('credit.types.personal.amount') }}</span>
            </div>
            <div class="home__credit-card-rate">
              <span class="home__credit-rate-from">{{ tp('credit.types.personal.rate_from') }}</span>
              <span class="home__credit-rate-value">{{ credit_rate('personal') }}%</span>
            </div>
