<style>
/* Insurance (Assurances) Specific Styles */
.banking__insurance-summary {
    display: grid !important;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)) !important;
    gap: 20px !important;
    margin-bottom: 32px !important;
}

.banking__insurance-stat {
    background: #ffffff !important;
    border: 1px solid #e1e8ed !important;
    border-radius: 8px !important;
    padding: 20px !important;
    text-align: center !important;
}

.banking__insurance-stat-value {
    font-size: 24px !important;
    font-weight: 700 !important;
    color: #2c3e50 !important;
    margin-bottom: 8px !important;
}

.banking__insurance-stat-label {
    font-size: 13px !important;
    color: #7f8c8d !important;
    font-weight: 500 !important;
}

.banking__insurance-grid {
    display: grid !important;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)) !important;
    gap: 24px !important;
    margin-bottom: 32px !important;
}

.banking__insurance-card {
    background: #ffffff !important;
    border: 1px solid #e1e8ed !important;
    border-radius: 12px !important;
    padding: 24px !important;
    transition: box-shadow 0.2s ease !important;
}

.banking__insurance-card:hover {
    box-shadow: 0 4px 20px rgba(0,0,0,0.1) !important;
}

.banking__insurance-header {
    display: flex !important;
    align-items: flex-start !important;
    gap: 16px !important;
    margin-bottom: 20px !important;
}

.banking__insurance-icon {
    width: 48px !important;
    height: 48px !important;
    border-radius: 12px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    flex-shrink: 0 !important;
}

.banking__insurance-icon--auto {
    background: linear-gradient(135deg, #3498db, #2980b9) !important;
}

.banking__insurance-icon--home, .banking__insurance-icon--habitation {
    background: linear-gradient(135deg, #e74c3c, #c0392b) !important;
}

.banking__insurance-icon--life, .banking__insurance-icon--vie {
    background: linear-gradient(135deg, #9b59b6, #8e44ad) !important;
}

.banking__insurance-icon--health, .banking__insurance-icon--sante {
    background: linear-gradient(135deg, #1abc9c, #16a085) !important;
}

.banking__insurance-icon--professional, .banking__insurance-icon--professionnelle {
    background: linear-gradient(135deg, #f39c12, #e67e22) !important;
}

.banking__insurance-icon-svg {
    width: 24px !important;
    height: 24px !important;
    color: white !important;
}

.banking__insurance-info {
    flex: 1 !important;
}

.banking__insurance-name {
    font-size: 18px !important;
    font-weight: 600 !important;
    color: #2c3e50 !important;
    margin: 0 0 4px 0 !important;
}

.banking__insurance-reference {
    font-size: 13px !important;
    color: #7f8c8d !important;
    margin: 0 0 4px 0 !important;
}

.banking__insurance-property {
    font-size: 13px !important;
    color: #95a5a6 !important;
    margin: 0 !important;
}

.banking__insurance-status {
    display: flex !important;
    align-items: center !important;
    gap: 6px !important;
    padding: 6px 12px !important;
    border-radius: 20px !important;
    font-size: 12px !important;
    font-weight: 600 !important;
    white-space: nowrap !important;
}

.banking__insurance-status--active, .banking__insurance-status--actif {
    background: #d5f4e6 !important;
    color: #16a085 !important;
}

.banking__insurance-status--suspended, .banking__insurance-status--suspendu {
    background: #ffeaa7 !important;
    color: #f39c12 !important;
}

.banking__insurance-status--expired, .banking__insurance-status--expire {
    background: #fab1a0 !important;
    color: #e74c3c !important;
}

.banking__insurance-status--cancelled, .banking__insurance-status--resilie {
    background: #ddd !important;
    color: #7f8c8d !important;
}

.banking__insurance-status-icon {
    width: 14px !important;
    height: 14px !important;
}

.banking__insurance-coverage {
    display: grid !important;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)) !important;
    gap: 16px !important;
    margin-bottom: 20px !important;
}

.banking__insurance-coverage-item {
    display: flex !important;
    flex-direction: column !important;
    gap: 4px !important;
}

.banking__insurance-coverage-label {
    font-size: 13px !important;
    color: #7f8c8d !important;
}

.banking__insurance-coverage-value {
    font-size: 13px !important;
    font-weight: 600 !important;
    color: #2c3e50 !important;
}

.banking__insurance-details {
    display: grid !important;
    grid-template-columns: 1fr 1fr !important;
    gap: 16px !important;
    margin-bottom: 20px !important;
}

.banking__insurance-detail {
    display: flex !important;
    flex-direction: column !important;
    gap: 4px !important;
}

.banking__insurance-detail-label {
    font-size: 12px !important;
    color: #7f8c8d !important;
    text-transform: uppercase !important;
    font-weight: 600 !important;
}

.banking__insurance-detail-value {
    font-size: 14px !important;
    font-weight: 600 !important;
    color: #2c3e50 !important;
}

.banking__insurance-actions {
    display: flex !important;
    gap: 12px !important;
}

.banking__insurance-btn {
    flex: 1 !important;
    padding: 10px 16px !important;
    border: none !important;
    border-radius: 6px !important;
    font-size: 14px !important;
    font-weight: 600 !important;
    cursor: pointer !important;
    transition: all 0.2s ease !important;
}

.banking__insurance-btn--primary {
    background: #3498db !important;
    color: white !important;
}

.banking__insurance-btn--primary:hover {
    background: #2980b9 !important;
}

.banking__insurance-btn--secondary {
    background: #ecf0f1 !important;
    color: #2c3e50 !important;
}

.banking__insurance-btn--secondary:hover {
    background: #d5dbdb !important;
}

/* Empty State Styles */
.banking__empty-state {
    text-align: center !important;
    padding: 60px 20px !important;
    background: #ffffff !important;
    border: 1px solid #e1e8ed !important;
    border-radius: 12px !important;
    margin-bottom: 32px !important;
}

.banking__empty-state-icon {
    width: 80px !important;
    height: 80px !important;
    margin: 0 auto 20px !important;
    border-radius: 50% !important;
    background: #f8f9fa !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
}

.banking__empty-state-icon-svg {
    width: 40px !important;
    height: 40px !important;
    color: #7f8c8d !important;
}

.banking__empty-state-title {
    font-size: 20px !important;
    font-weight: 600 !important;
    color: #2c3e50 !important;
    margin: 0 0 12px 0 !important;
}

.banking__empty-state-description {
    font-size: 16px !important;
    color: #7f8c8d !important;
    margin: 0 0 24px 0 !important;
    line-height: 1.5 !important;
}

.banking__empty-state-btn {
    display: inline-block !important;
    padding: 12px 24px !important;
    background: #3498db !important;
    color: white !important;
    text-decoration: none !important;
    border-radius: 8px !important;
    font-weight: 600 !important;
    transition: background 0.2s ease !important;
}

.banking__empty-state-btn:hover {
    background: #2980b9 !important;
    text-decoration: none !important;
    color: white !important;
}

/* Insurance Offers Styles */
.banking__insurance-offers {
    display: grid !important;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)) !important;
    gap: 20px !important;
    margin-bottom: 32px !important;
}

.banking__insurance-offer {
    background: #ffffff !important;
    border: 1px solid #e1e8ed !important;
    border-radius: 12px !important;
    padding: 24px !important;
    display: flex !important;
    align-items: center !important;
    gap: 16px !important;
    transition: box-shadow 0.2s ease !important;
}

.banking__insurance-offer:hover {
    box-shadow: 0 4px 20px rgba(0,0,0,0.1) !important;
}

.banking__insurance-offer-icon {
    width: 56px !important;
    height: 56px !important;
    border-radius: 12px !important;
    background: #f8f9fa !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    flex-shrink: 0 !important;
}

.banking__insurance-offer-icon-svg {
    width: 28px !important;
    height: 28px !important;
    color: #3498db !important;
}

.banking__insurance-offer-content {
    flex: 1 !important;
}

.banking__insurance-offer-title {
    font-size: 16px !important;
    font-weight: 600 !important;
    color: #2c3e50 !important;
    margin: 0 0 4px 0 !important;
}

.banking__insurance-offer-description {
    font-size: 14px !important;
    color: #7f8c8d !important;
    margin: 0 !important;
    line-height: 1.4 !important;
}

.banking__insurance-offer-actions {
    flex-shrink: 0 !important;
}

.banking__insurance-offer-btn {
    padding: 8px 16px !important;
    background: #3498db !important;
    color: white !important;
    text-decoration: none !important;
    border-radius: 6px !important;
    font-size: 14px !important;
    font-weight: 600 !important;
    transition: background 0.2s ease !important;
}

.banking__insurance-offer-btn:hover {
    background: #2980b9 !important;
    text-decoration: none !important;
    color: white !important;
}

@media (max-width: 768px) {
    .banking__insurance-grid {
        grid-template-columns: 1fr !important;
    }
    
    .banking__insurance-offers {
        grid-template-columns: 1fr !important;
    }
    
    .banking__insurance-details {
        grid-template-columns: 1fr !important;
    }
    
    .banking__insurance-coverage {
        grid-template-columns: 1fr !important;
    }
    
    .banking__insurance-actions {
        flex-direction: column !important;
    }
    
