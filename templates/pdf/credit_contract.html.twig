                {{ 'credit_contract.chapter_one.residing_at'|trans({}, 'credit_contract', _locale) }}<br>
                {% if creditApplication.address %}
                    {{ creditApplication.address }}<br>
                    {% if creditApplication.city %}
                        {{ creditApplication.postalCode }} {{ creditApplication.city|upper }}<br>
                    {% endif %}
                {% else %}
                    {{ 'credit_contract.chapter_one.address_not_provided'|trans({}, 'credit_contract', _locale) }}<br>
                    {{ 'credit_contract.chapter_one.postal_code_city'|trans({}, 'credit_contract', _locale) }}<br>
