            <div class="home__credit-feature-icon">
              {{ ux_icon('heroicons:calculator', {'class': 'home__credit-feature-icon-svg'}) }}
            </div>
            <div class="home__credit-feature-content">
              <h4>{{ tp('credit.features.attractive_rates') }}</h4>
              <p>{{ tp('credit.features.attractive_rates_desc') }}</p>
            </div>
          </div>

          <div class="home__credit-feature">
            <div class="home__credit-feature-icon">
              {{ ux_icon('heroicons:shield-check', {'class': 'home__credit-feature-icon-svg'}) }}
            </div>
            <div class="home__credit-feature-content">
              <h4>{{ tp('credit.features.expert_support') }}</h4>
              <p>{{ tp('credit.features.expert_support_desc') }}</p>
            </div>
