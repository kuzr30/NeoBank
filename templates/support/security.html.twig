{% extends 'base.html.twig' %}

{% block title %}{{ tp('help_center_security.page.title', {}, 'help_center_security') }} - {{ companySettings.companyName }}{% endblock %}

{% block body %}
<main>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero__container">
            <div class="hero__content">
                <h1 class="hero__title">{{ tp('help_center_security.hero.title', {}, 'help_center_security') }}</h1>
                <p class="hero__subtitle">{{ tp('help_center_security.hero.subtitle', {}, 'help_center_security') }}</p>
            </div>
        </div>
    </section>

    <!-- Section Security -->
    <section class="security-details">
        <div class="security-details__container">
            <h2 class="security-details__title">{{ tp('help_center_security.sections.main_title', {}, 'help_center_security') }}</h2>
            
            <div class="security-grid">
                <!-- Authentication Section -->
                <div class="security-category">
                    <div class="security-category__header">
                        <div class="security-category__icon">
                            <twig:ux:icon name="heroicons:finger-print" />
                        </div>
                        <h3 class="security-category__title">{{ tp('help_center_security.sections.authentication.title', {}, 'help_center_security') }}</h3>
                        <p class="security-category__description">{{ tp('help_center_security.sections.authentication.description', {}, 'help_center_security') }}</p>
                    </div>
                    
                    <div class="security-category__items">
                        <div class="security-item">
                            <div class="security-item__header">
                                <twig:ux:icon name="heroicons:shield-check" class="security-item__icon" />
                                <h4 class="security-item__title">{{ tp('help_center_security.sections.authentication.items.two_factor.title', {}, 'help_center_security') }}</h4>
                            </div>
                            <p class="security-item__description">{{ tp('help_center_security.sections.authentication.items.two_factor.description', {}, 'help_center_security') }}</p>
                            <p class="security-item__details">{{ tp('help_center_security.sections.authentication.items.two_factor.details', {}, 'help_center_security') }}</p>
                        </div>
                        
                        <div class="security-item">
                            <div class="security-item__header">
                                <twig:ux:icon name="heroicons:key" class="security-item__icon" />
                                <h4 class="security-item__title">{{ tp('help_center_security.sections.authentication.items.strong_passwords.title', {}, 'help_center_security') }}</h4>
                            </div>
                            <p class="security-item__description">{{ tp('help_center_security.sections.authentication.items.strong_passwords.description', {}, 'help_center_security') }}</p>
                            <p class="security-item__details">{{ tp('help_center_security.sections.authentication.items.strong_passwords.details', {}, 'help_center_security') }}</p>
                        </div>
                        
                        <div class="security-item">
                            <div class="security-item__header">
                                <twig:ux:icon name="heroicons:finger-print" class="security-item__icon" />
                                <h4 class="security-item__title">{{ tp('help_center_security.sections.authentication.items.biometric.title', {}, 'help_center_security') }}</h4>
                            </div>
                            <p class="security-item__description">{{ tp('help_center_security.sections.authentication.items.biometric.description', {}, 'help_center_security') }}</p>
                            <p class="security-item__details">{{ tp('help_center_security.sections.authentication.items.biometric.details', {}, 'help_center_security') }}</p>
                        </div>
                        
                        <div class="security-item">
                            <div class="security-item__header">
                                <twig:ux:icon name="heroicons:clock" class="security-item__icon" />
                                <h4 class="security-item__title">{{ tp('help_center_security.sections.authentication.items.session_management.title', {}, 'help_center_security') }}</h4>
                            </div>
                            <p class="security-item__description">{{ tp('help_center_security.sections.authentication.items.session_management.description', {}, 'help_center_security') }}</p>
                            <p class="security-item__details">{{ tp('help_center_security.sections.authentication.items.session_management.details', {}, 'help_center_security') }}</p>
                        </div>
                    </div>
                </div>

                <!-- Fraud Prevention Section -->
                <div class="security-category">
                    <div class="security-category__header">
                        <div class="security-category__icon">
                            <twig:ux:icon name="heroicons:shield-exclamation" />
                        </div>
