<section class="banking__content" data-tab="assurances">
    <!-- Insurance Header -->
    <div class="banking__operations-header">
        <div class="banking__account-summary">
            <h1 class="banking__account-title">{{ tp('banking_insurance.header.title', [], 'banking_insurance') }}</h1>
            <div class="banking__account-details">
                <span class="banking__account-type">{{ tp('banking_insurance.header.subtitle', [], 'banking_insurance') }}</span>
                <span class="banking__account-updated">{{ tp('banking_insurance.header.last_update', [], 'banking_insurance') }} : {{ "now"|date('d/m/Y à H:i') }}</span>
            </div>
        </div>
        <div class="banking__balance-display">
            <a href="{{ path('services_devis_form', {'type': 'auto'}) }}" class="banking__action-primary">
                {{ ux_icon('heroicons:plus', {'class': 'banking__action-icon'}) }}
                {{ tp('banking_insurance.header.new_quote', [], 'banking_insurance') }}
            </a>
        </div>
    </div>

    {% if hasContrats %}
        <!-- Insurance Statistics -->
        <div class="banking__insurance-summary">
            <div class="banking__insurance-stat">
                <div class="banking__insurance-stat-value">{{ statistiques.contratsActifs|default(0) }}</div>
                <div class="banking__insurance-stat-label">{{ tp('banking_insurance.statistics.active_contracts', [], 'banking_insurance') }}</div>
            </div>
            <div class="banking__insurance-stat">
                <div class="banking__insurance-stat-value">{{ statistiques.primeMensuelleTotal|default(0)|number_format(2, ',', ' ') }} €</div>
                <div class="banking__insurance-stat-label">{{ tp('banking_insurance.statistics.monthly_premium', [], 'banking_insurance') }}</div>
            </div>
            <div class="banking__insurance-stat">
                <div class="banking__insurance-stat-value">{{ statistiques.typesAssurance|default(0) }}</div>
                <div class="banking__insurance-stat-label">{{ tp('banking_insurance.statistics.insurance_types', [], 'banking_insurance') }}</div>
            </div>
            <div class="banking__insurance-stat">
                <div class="banking__insurance-stat-value">{{ statistiques.contratsExpirant|default(0) }}</div>
                <div class="banking__insurance-stat-label">{{ tp('banking_insurance.statistics.expiring_contracts', [], 'banking_insurance') }}</div>
            </div>
        </div>

        <!-- Active Insurance Contracts -->
        <div class="banking__section-header">
            <h2 class="banking__section-title">{{ tp('banking_insurance.contracts.title', [], 'banking_insurance') }}</h2>
        </div>

        <div class="banking__insurance-grid">
            {% for contrat in contratsActifs %}
                <div class="banking__insurance-card">
                    <div class="banking__insurance-header">
                        <div class="banking__insurance-icon banking__insurance-icon--{{ contrat.typeAssurance.value }}">
                            {% if contrat.typeAssurance.value == 'auto' %}
                                {{ ux_icon('heroicons:truck', {'class': 'banking__insurance-icon-svg'}) }}
                            {% elseif contrat.typeAssurance.value == 'habitation' %}
                                {{ ux_icon('heroicons:home', {'class': 'banking__insurance-icon-svg'}) }}
                            {% elseif contrat.typeAssurance.value == 'sante' %}
                                {{ ux_icon('heroicons:heart', {'class': 'banking__insurance-icon-svg'}) }}
                            {% elseif contrat.typeAssurance.value == 'vie' %}
                                {{ ux_icon('heroicons:user', {'class': 'banking__insurance-icon-svg'}) }}
                            {% elseif contrat.typeAssurance.value == 'pret' %}
                                {{ ux_icon('heroicons:building-library', {'class': 'banking__insurance-icon-svg'}) }}
                            {% elseif contrat.typeAssurance.value == 'voyage' %}
                                {{ ux_icon('heroicons:globe-alt', {'class': 'banking__insurance-icon-svg'}) }}
                            {% elseif contrat.typeAssurance.value == 'pro' %}
                                {{ ux_icon('heroicons:briefcase', {'class': 'banking__insurance-icon-svg'}) }}
                            {% else %}
                                {{ ux_icon('heroicons:shield-check', {'class': 'banking__insurance-icon-svg'}) }}
                            {% endif %}
                        </div>
                        <div class="banking__insurance-info">
                            <h3 class="banking__insurance-name">{{ tp(contrat.typeAssurance.label, [], 'enums') }}</h3>
                            <p class="banking__insurance-reference">{{ tp('banking_insurance.contracts.contract_number', [], 'banking_insurance') }} {{ contrat.numeroContrat }}</p>
                            {% if contrat.demandeDevis %}
                                <p class="banking__insurance-property">{{ contrat.demandeDevis.nomComplet }}</p>
                            {% endif %}
                        </div>
                        <div class="banking__insurance-status banking__insurance-status--{{ contrat.statut.value }}">
                            {% if contrat.statut.value == 'actif' %}
                                {{ ux_icon('heroicons:check-circle', {'class': 'banking__insurance-status-icon'}) }}
                                {{ tp('banking_insurance.contracts.active_status', [], 'banking_insurance') }}
                            {% elseif contrat.statut.value == 'suspendu' %}
                                {{ ux_icon('heroicons:pause-circle', {'class': 'banking__insurance-status-icon'}) }}
                                {{ tp('banking_insurance.contracts.suspended_status', [], 'banking_insurance') }}
                            {% elseif contrat.statut.value == 'expire' %}
                                {{ ux_icon('heroicons:x-circle', {'class': 'banking__insurance-status-icon'}) }}
                                {{ tp('banking_insurance.contracts.expired_status', [], 'banking_insurance') }}
                            {% else %}
                                {{ ux_icon('heroicons:x-circle', {'class': 'banking__insurance-status-icon'}) }}
                                {{ tp('banking_insurance.contracts.cancelled_status', [], 'banking_insurance') }}
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="banking__insurance-coverage">
                        {% if contrat.primeMensuelle %}
                            <div class="banking__insurance-coverage-item">
                                <span class="banking__insurance-coverage-label">{{ tp('banking_insurance.coverage.monthly_premium', [], 'banking_insurance') }}</span>
                                <span class="banking__insurance-coverage-value">{{ contrat.primeMensuelle|number_format(2, ',', ' ') }}€</span>
                            </div>
                        {% endif %}
                        {% if contrat.montantCouverture %}
                            <div class="banking__insurance-coverage-item">
                                <span class="banking__insurance-coverage-label">{{ tp('banking_insurance.coverage.coverage_amount', [], 'banking_insurance') }}</span>
                                <span class="banking__insurance-coverage-value">{{ contrat.montantCouverture|number_format(2, ',', ' ') }}€</span>
                            </div>
                        {% endif %}
                    </div>

                    <div class="banking__insurance-details">
                        {% if contrat.dateActivation %}
                            <div class="banking__insurance-detail">
                                <span class="banking__insurance-detail-label">{{ tp('banking_insurance.details.activation_date', [], 'banking_insurance') }}</span>
                                <span class="banking__insurance-detail-value">{{ contrat.dateActivation|date('d/m/Y') }}</span>
                            </div>
                        {% endif %}
                        {% if contrat.dateExpiration %}
                            <div class="banking__insurance-detail">
                                <span class="banking__insurance-detail-label">{{ tp('banking_insurance.details.expiration_date', [], 'banking_insurance') }}</span>
                                <span class="banking__insurance-detail-value">{{ contrat.dateExpiration|date('d/m/Y') }}</span>
                            </div>
                        {% endif %}
                        {% if contrat.dureeEnMois %}
                            <div class="banking__insurance-detail">
                                <span class="banking__insurance-detail-label">{{ tp('banking_insurance.details.duration', [], 'banking_insurance') }}</span>
                                <span class="banking__insurance-detail-value">{{ contrat.dureeEnMois }} {{ tp('banking_insurance.details.months', [], 'banking_insurance') }}</span>
                            </div>
                        {% endif %}
                        {% if contrat.prochainePrimeDate %}
                            <div class="banking__insurance-detail">
                                <span class="banking__insurance-detail-label">{{ tp('banking_insurance.details.next_premium', [], 'banking_insurance') }}</span>
                                <span class="banking__insurance-detail-value">{{ contrat.prochainePrimeDate|date('d/m/Y') }}</span>
                            </div>
                        {% endif %}
                    </div>

                    <div class="banking__insurance-actions">
                        {% if contrat.statut.value == 'suspendu' %}
                            <button class="banking__insurance-btn banking__insurance-btn--primary">{{ tp('banking_insurance.actions.reactivate', [], 'banking_insurance') }}</button>
                            <button class="banking__insurance-btn banking__insurance-btn--secondary">{{ tp('banking_insurance.actions.details', [], 'banking_insurance') }}</button>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- No Active Contracts - Empty State -->
        <div class="banking__empty-state">
            <div class="banking__empty-icon">
                {{ ux_icon('heroicons:shield-exclamation', {'class': 'banking__empty-icon-svg'}) }}
            </div>
            <h3 class="banking__empty-title">{{ tp('banking_insurance.empty_state.no_contracts_title', [], 'banking_insurance') }}</h3>
            <p class="banking__empty-description">{{ tp('banking_insurance.empty_state.no_contracts_description', [], 'banking_insurance') }}</p>
            <div class="banking__empty-actions">
                <a href="{{ path('services_devis_form', {'type': 'auto'}) }}" class="banking__action-primary">
                    {{ ux_icon('heroicons:plus', {'class': 'banking__action-icon'}) }}
                    {{ tp('banking_insurance.empty_state.request_quote', [], 'banking_insurance') }}
                </a>
                <a href="{{ path('services_insurances') }}" class="banking__credit-btn banking__credit-btn--secondary">
                    {{ ux_icon('heroicons:information-circle', {'class': 'banking__action-icon'}) }}
                    {{ tp('banking_insurance.empty_state.learn_more', [], 'banking_insurance') }}
                </a>
            </div>
        </div>
    {% endif %}

 

    <!-- Pending Quote Requests -->
    {% if hasDemandesEnCours %}
        <div class="banking__section-header">
            <h2 class="banking__section-title">{{ tp('banking_insurance.pending_quotes.title', [], 'banking_insurance') }}</h2>
            <p class="banking__section-subtitle">{{ tp('banking_insurance.pending_quotes.subtitle', [], 'banking_insurance') }}</p>
        </div>

        <div class="banking__operations">
            <table class="banking__table">
                <thead class="banking__table-head">
                    <tr>
                        <th>{{ tp('banking_insurance.pending_quotes.quote_number', [], 'banking_insurance') }}</th>
                        <th>{{ tp('banking_insurance.pending_quotes.type', [], 'banking_insurance') }}</th>
                        <th>{{ tp('banking_insurance.pending_quotes.date', [], 'banking_insurance') }}</th>
                        <th>{{ tp('banking_insurance.pending_quotes.status', [], 'banking_insurance') }}</th>
                       
                    </tr>
                </thead>
                <tbody class="banking__table-body">
                    {% for demande in demandesDevis %}
                        <tr>
                            <td class="banking__table-cell">
                                <div class="banking__transaction-ref">{{ demande.numeroDevis }}</div>
                            </td>
                            <td class="banking__table-cell">
                                <div class="banking__transaction-description">{{ tp(demande.typeAssurance.label, [], 'enums') }}</div>
                            </td>
                            <td class="banking__table-cell">
                                <div class="banking__transaction-date">{{ demande.createdAt|date('d/m/Y') }}</div>
                            </td>
                            <td class="banking__table-cell">
                                <div class="banking__status banking__status--{{ demande.statut.value }}">{{ tp(demande.statut.label, [], 'enums') }}</div>
                            </td>
                          
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</section>