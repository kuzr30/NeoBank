    padding: 0.375rem 0;
    color: #374151;
    font-size: 0.875rem;
}

.features-item i {
    color: #10b981;
    font-size: 0.75rem;
}

.limits-item i {
    color: #3b82f6;
    font-size: 0.75rem;
}

/* BOUTONS D'ACTION */
.action-buttons {
    display: flex;
    flex-direction: row;
    gap: 0.75rem;
    margin-top: auto;
}

.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.25rem;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
