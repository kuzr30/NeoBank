<script>
document.addEventListener('DOMContentLoaded', function() {
  // Animation des cartes d'engagement au scroll
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animation = 'slideUpEngagement 0.6s ease forwards';
      }
    });
  }, observerOptions);

  // Animation des cartes principales
  const cards = document.querySelectorAll('.home__engagement-card');
  cards.forEach((card, index) => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(30px)';
    card.style.animationDelay = `${index * 0.2}s`;
    observer.observe(card);
  });

  // Animation des métriques
  const metrics = document.querySelectorAll('.home__engagement-metric');
  metrics.forEach((metric, index) => {
    metric.style.opacity = '0';
    metric.style.transform = 'translateY(20px)';
    metric.style.animationDelay = `${0.8 + index * 0.1}s`;
    observer.observe(metric);
  });

  // Effet hover sur les statistiques
  const stats = document.querySelectorAll('.home__engagement-stat-number');
  stats.forEach(stat => {
    stat.addEventListener('mouseenter', function() {
      this.style.transform = 'scale(1.1)';
      this.style.transition = 'transform 0.2s ease';
    });
    
    stat.addEventListener('mouseleave', function() {
      this.style.transform = 'scale(1)';
    });
  });

  // Banks carousel functionality
  const banksCarousel = document.querySelector('.home__engagement-banks-carousel');
  const banksTrack = document.querySelector('.home__engagement-banks-track');
  
  if (banksCarousel && banksTrack) {
    // Pause animation on hover over individual bank slides
    const bankSlides = document.querySelectorAll('.home__engagement-bank-slide');
    bankSlides.forEach(slide => {
      slide.addEventListener('mouseenter', function() {
        banksTrack.style.animationPlayState = 'paused';
      });
      
      slide.addEventListener('mouseleave', function() {
        banksTrack.style.animationPlayState = 'running';
      });
    });

    // Add click event for bank slides
    bankSlides.forEach(slide => {
      slide.addEventListener('click', function() {
        const bankName = slide.querySelector('.home__engagement-bank-logo').alt;
        console.log(`Clicked on ${bankName}`);
        // You can add more functionality here like showing details modal
      });
    });
  }
});

// CSS pour l'animation
const engagementStyle = document.createElement('style');
engagementStyle.textContent = `
@keyframes slideUpEngagement {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
`;
document.head.appendChild(engagementStyle);
</script>
