{% extends 'email/base_email.html.twig' %}

{% block title %}{{ tp('email_contract_validated.title', {}, 'email_contract_validated') }}{% endblock %}

{% block content %}
    <h2 class="content-title">{{ tp('email_contract_validated.content.page_title', {}, 'email_contract_validated') }}</h2>
    
    <p class="content-text">
        {{ tp('email_contract_validated.content.greeting', {customerName: customerName}, 'email_contract_validated')|raw }}
    </p>

    <div class="success-box">
        <h3 class="box-title">{{ tp('email_contract_validated.content.validation_section.title', {}, 'email_contract_validated') }}</h3>
        <p class="box-text">
            {{ tp('email_contract_validated.content.validation_section.message', {contractNumber: referenceNumber}, 'email_contract_validated')|raw }}
        </p>
    </div>

    <div class="info-box">
        <h3 class="box-title">{{ tp('email_contract_validated.content.contract_details.title', {}, 'email_contract_validated') }}</h3>
        <p class="box-text">
            <strong>{{ tp('email_contract_validated.content.contract_details.number', {}, 'email_contract_validated') }}:</strong> {{ referenceNumber }}
        </p>
        <p class="box-text">
            <strong>{{ tp('email_contract_validated.content.contract_details.amount', {}, 'email_contract_validated') }}:</strong> {{ loanAmount|number_format(2, ',', ' ') }} EUR
        </p>
    </div>

    <div class="warning-box">
        <h3 class="box-title">{{ tp('email_contract_validated.content.next_steps.title', {}, 'email_contract_validated') }}</h3>
        <p class="box-text">
            {{ tp('email_contract_validated.content.next_steps.message', {}, 'email_contract_validated')|raw }}
        </p>
    </div>

    <div class="btn-container" style="text-align:center;margin:50px 0;">
        <a href="{{ url('home_index', {'_locale': locale}) }}" class="btn" style="display:inline-block;margin:0;padding:22px 45px;background:#2c3e50;color:#ffffff!important;font-size:20px;font-weight:700;line-height:1;text-decoration:none;text-align:center;border-radius:50px;border:none;cursor:pointer;box-shadow:0 15px 35px rgba(44,62,80,0.4);text-transform:uppercase;letter-spacing:1px;transition:all 0.3s ease;">{{ tp('email_contract_validated.content.access_account', {}, 'email_contract_validated') }}</a>
    </div>

    <p class="content-text">
        {{ tp('email_contract_validated.content.thanks_message', {}, 'email_contract_validated') }}
    </p>

    <p class="footer-text">
        {{ tp('email_contract_validated.content.footer', {}, 'email_contract_validated')|raw }}
    </p>
{% endblock %}
