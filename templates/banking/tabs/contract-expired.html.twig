.button-icon {
    width: 1rem;
    height: 1rem;
}

/* Responsive Design */
@media (max-width: 768px) {
    .info-grid {
        grid-template-columns: 1fr;
    }
    
    .contract-actions {
        flex-direction: column;
        align-items: stretch;
    }
    
    .action-button {
        min-width: auto;
        width: 100%;
    }
    
    .step-item {
        flex-direction: column;
        text-align: center;
        gap: 0.5rem;
    }
    
    .step-number {
        align-self: center;
    }
}

/* Animations */
@keyframes slideInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.expiry-message,
.contract-details,
.next-steps {
    animation: slideInUp 0.5s ease-out;
}

.expiry-message {
    animation-delay: 0.1s;
}

.contract-details {
    animation-delay: 0.2s;
}

.next-steps {
    animation-delay: 0.3s;
}
</style>
