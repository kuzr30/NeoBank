{% extends 'email/base_email.html.twig' %}

{% block title %}{{ tp('email_password_reset.title', {}, 'email_password_reset') }}{% endblock %}

{% block content %}
    <h2 class="content-title">{{ tp('email_password_reset.content.page_title', {}, 'email_password_reset') }}</h2>
    
    <p class="content-text">
        {{ tp('email_password_reset.content.greeting', {firstName: firstName}, 'email_password_reset') }}
    </p>

    <p class="content-text">
        {{ tp('email_password_reset.content.intro', {}, 'email_password_reset') }}
    </p>

    <div class="warning-box">
        <h3 style="margin-top: 0; color: #f57c00;">{{ tp('email_password_reset.content.action_required.title', {}, 'email_password_reset') }}</h3>
        <p style="margin-bottom: 0;">
            {{ tp('email_password_reset.content.action_required.description', {}, 'email_password_reset') }}
        </p>
        </p>
    </div>

    <p class="content-text">
        {{ tp('email_password_reset.content.instruction', {}, 'email_password_reset') }}
    </p>

    <div class="btn-container">
        <a href="{{ resetUrl }}" class="btn">{{ tp('email_password_reset.content.button_text', {}, 'email_password_reset') }}</a>
    </div>

    <div class="info-box">
        <h3 style="margin-top: 0; color: #1976d2;">{{ tp('email_password_reset.content.temporary_link.title', {}, 'email_password_reset') }}</h3>
        <p style="margin-bottom: 0;">
            {{ tp('email_password_reset.content.temporary_link.description', {expirationTime: expirationTime}, 'email_password_reset')|raw }}
        </p>
    </div>

    <p class="content-text">
        {{ tp('email_password_reset.content.manual_link', {}, 'email_password_reset') }}
    </p>

    <div style="background-color: #f8f9fa; padding: 15px; border-radius: 8px; margin: 20px 0; font-family: monospace; word-break: break-all; font-size: 14px; color: #495057;">
        {{ resetUrl }}
    </div>

    <div class="warning-box">
        <h3 style="margin-top: 0; color: #f57c00;">{{ tp('email_password_reset.content.security_tips.title', {}, 'email_password_reset') }}</h3>
        <ul style="margin-bottom: 0; padding-left: 20px;">
            <li>{{ tp('email_password_reset.content.security_tips.item_1', {}, 'email_password_reset') }}</li>
            <li>{{ tp('email_password_reset.content.security_tips.item_2', {}, 'email_password_reset') }}</li>
            <li>{{ tp('email_password_reset.content.security_tips.item_3', {}, 'email_password_reset') }}</li>
            <li>{{ tp('email_password_reset.content.security_tips.item_4', {}, 'email_password_reset') }}</li>
        </ul>
    </div>

    <p class="content-text">
        {{ tp('email_password_reset.content.help_text', {}, 'email_password_reset') }}
    </p>

    <p class="content-text" style="margin-bottom: 0;">
        {{ tp('email_password_reset.content.signature', {}, 'email_password_reset')|raw }}
    </p>
{% endblock %}
