{% extends 'email/base_email.html.twig' %}

{% block title %}{{ tp('email_password_changed.title', {}, 'email_password_changed') }}{% endblock %}

{% block content %}
    <h2 class="content-title">{{ tp('email_password_changed.content.page_title', {}, 'email_password_changed') }}</h2>
    
    <p class="content-text">
        {{ tp('email_password_changed.content.greeting', {'firstName': user.firstName, 'lastName': user.lastName}, 'email_password_changed') }}
    </p>
    
    <p class="content-text">
        {{ tp('email_password_changed.content.confirmation', {'changeDate': changeDate|date('d/m/Y à H:i', user.timezone ?: 'Europe/Paris')}, 'email_password_changed') }}
    </p>
    
    <div class="info-box">
        <h3 style="margin-top: 0; color: #1976d2;">{{ tp('email_password_changed.content.connection_info.title', {}, 'email_password_changed') }}</h3>
        <table style="width: 100%; border-spacing: 0;">
            <tr>
                <td style="padding: 8px 0; color: #666; width: 40%;">{{ tp('email_password_changed.content.connection_info.email', {}, 'email_password_changed') }}</td>
                <td style="padding: 8px 0; font-weight: 500;">{{ user.email }}</td>
            </tr>
            <tr>
                <td style="padding: 8px 0; color: #666;">{{ tp('email_password_changed.content.connection_info.change_date', {}, 'email_password_changed') }}</td>
                <td style="padding: 8px 0; font-weight: 500;">{{ changeDate|date('d/m/Y à H:i:s', user.timezone ?: 'Europe/Paris') }}</td>
            </tr>
        </table>
    </div>
    
    <p class="content-text">
        {{ tp('email_password_changed.content.security_reinforced', {}, 'email_password_changed') }}
    </p>
    
    <div class="warning-box">
        <h3 style="margin-top: 0; color: #f57c00;">{{ tp('email_password_changed.content.security_alert.title', {}, 'email_password_changed') }}</h3>
        <p style="margin-bottom: 0;">
            {{ tp('email_password_changed.content.security_alert.description', {}, 'email_password_changed') }}
        </p>
    </div>
    
    <div class="btn-container">
        <a href="{{ url('profile_security') }}" style="display: inline-block; background-color: #1976d2; color: white; padding: 12px 24px; text-decoration: none; border-radius: 6px; font-weight: 500;">{{ tp('email_password_changed.content.button_text', {}, 'email_password_changed') }}</a>
    </div>
    
    <div class="info-box">
        <h3 style="margin-top: 0; color: #1976d2;">{{ tp('email_password_changed.content.security_tips.title', {}, 'email_password_changed') }}</h3>
        <ul style="margin-bottom: 0; padding-left: 20px;">
            <li>{{ tp('email_password_changed.content.security_tips.item_1', {}, 'email_password_changed') }}</li>
            <li>{{ tp('email_password_changed.content.security_tips.item_2', {}, 'email_password_changed') }}</li>
            <li>{{ tp('email_password_changed.content.security_tips.item_3', {}, 'email_password_changed') }}</li>
            <li>{{ tp('email_password_changed.content.security_tips.item_4', {}, 'email_password_changed') }}</li>
        </ul>
    </div>
    
    <p class="content-text" style="margin-bottom: 0;">
        {{ tp('email_password_changed.content.footer', {}, 'email_password_changed')|raw }}
    </p>
{% endblock %}
