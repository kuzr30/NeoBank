{# Banking Custom Pagination Template #}
{%- if pageCount > 1 -%}
<div class="banking__pagination-nav">
    <div class="banking__pagination-controls">
        {%- if previous is defined -%}
            <a href="{{ path(route, query|merge({page: previous})) }}" 
               class="banking__pagination-btn banking__pagination-btn--prev"
               rel="prev">
                <svg class="banking__pagination-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                {{ tp('banking_pagination.previous', [], 'banking_pagination') }}
            </a>
        {%- else -%}
            <span class="banking__pagination-btn banking__pagination-btn--prev banking__pagination-btn--disabled">
                <svg class="banking__pagination-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                {{ tp('banking_pagination.previous', [], 'banking_pagination') }}
            </span>
        {%- endif -%}

        <div class="banking__pagination-pages">
            {%- for page in pagesInRange -%}
                {%- if page == current -%}
                    <span class="banking__pagination-page banking__pagination-page--current">{{ page }}</span>
                {%- else -%}
                    <a href="{{ path(route, query|merge({page: page})) }}" 
                       class="banking__pagination-page">{{ page }}</a>
                {%- endif -%}
            {%- endfor -%}
        </div>

        {%- if next is defined -%}
            <a href="{{ path(route, query|merge({page: next})) }}" 
               class="banking__pagination-btn banking__pagination-btn--next"
               rel="next">
                {{ tp('banking_pagination.next', [], 'banking_pagination') }}
                <svg class="banking__pagination-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
            </a>
        {%- else -%}
            <span class="banking__pagination-btn banking__pagination-btn--next banking__pagination-btn--disabled">
                {{ tp('banking_pagination.next', [], 'banking_pagination') }}
                <svg class="banking__pagination-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
            </span>
        {%- endif -%}
    </div>
    
    <div class="banking__pagination-info">
        {{ tp('banking_pagination.page_info', {current: current, pageCount: pageCount, totalCount: totalCount}, 'banking_pagination') }}
    </div>
</div>
{%- endif -%}
