<style>
/* Insurance Hero - Inspired by Modern Design */
.insurance__hero {
    position: relative;
    min-height: 100vh;
    background-color: var(--color-background);
  color: var(--color-text);
    display: flex;
    align-items: center;
    padding: 2rem 0;
    overflow: hidden;
}

.insurance__hero-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
}

/* Content Section */
.insurance__hero-content {
    color: #1a1a1a;
}

.insurance__hero-title {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: #2d2d2d;
}

.insurance__hero-accent {
    color: var(--color-primary);
    display: block;
}

.insurance__hero-description {
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    color: #666;
    max-width: 90%;
}

.insurance__hero-form {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
    max-width: 500px;
}

.insurance__hero-input {
    flex: 1;
    padding: 1rem 1.25rem;
    border: 2px solid #e5e5e5;
    border-radius: 0.5rem;
    font-size: 1rem;
    background: white;
    transition: all 0.3s ease;
}

.insurance__hero-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.1);
}

.insurance__hero-btn {
    background: var(--color-primary);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
}

.insurance__hero-btn:hover {
    background: #e55a2b;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 107, 53, 0.3);
}

/* Navigation Tabs */
.insurance__hero-nav {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
}

.insurance__nav-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    color: #666;
    background: white;
    border: 1px solid #e5e5e5;
}

.insurance__nav-item:hover {
    background: #f8f8f8;
    color: #333;
}

.insurance__nav-item--active {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
}

.insurance__nav-icon {
    width: 1rem;
    height: 1rem;
}

/* Visual Section */
.insurance__hero-visual {
    position: relative;
    height: 600px;
    border-radius: 1rem;
    overflow: hidden;
}

.insurance__hero-image {
    position: relative;
    height: 100%;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
}

.insurance__hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

/* 24/7 Support Badge */
.insurance__hero-badge {
    position: absolute;
    top: 2rem;
    right: 2rem;
    background: var(--color-primary);
    border-radius: 1rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: white;
    box-shadow: 0 8px 25px rgba(255, 107, 53, 0.3);
    backdrop-filter: blur(10px);
    z-index: 3;
    animation: badge-float 3s ease-in-out infinite;
}

.insurance__badge-icon {
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.insurance__badge-number {
    font-size: 1.5rem;
    font-weight: 800;
    line-height: 1;
}

.insurance__badge-text {
    font-size: 0.75rem;
    font-weight: 500;
    opacity: 0.9;
}

/* Animations */
@keyframes badge-float {
    0%, 100% { 
        transform: translateY(0);
    }
    50% { 
        transform: translateY(-8px);
    }
}

/* Responsive Design */
@media (max-width: 1200px) {
    .insurance__hero-container {
        gap: 3rem;
        padding: 0 1.5rem;
    }
    
    .insurance__hero-visual {
        height: 500px;
    }
}

@media (max-width: 1024px) {
    .insurance__hero-container {
        grid-template-columns: 1fr;
        gap: 2rem;
        text-align: center;
    }
    
    .insurance__hero-visual {
        order: -1;
        height: 400px;
    }
    
    .insurance__hero-form {
        justify-content: center;
        margin: 0 auto 3rem;
    }
    
    .insurance__hero-nav {
        justify-content: center;
    }
}

@media (max-width: 768px) {
    .insurance__hero {
        min-height: 90vh;
        padding: 1rem 0;
    }
    
    .insurance__hero-container {
        padding: 0 1rem;
    }
    
    .insurance__hero-form {
        flex-direction: column;
        max-width: 100%;
    }
    
    .insurance__hero-nav {
        gap: 0.25rem;
    }
    
    .insurance__nav-item {
        padding: 0.5rem 0.75rem;
        font-size: 0.75rem;
    }
    
    .insurance__hero-visual {
        height: 300px;
    }
    
    .insurance__hero-badge {
        top: 1rem;
        right: 1rem;
        padding: 0.75rem;
        gap: 0.5rem;
    }
    
    .insurance__badge-number {
        font-size: 1.125rem;
    }
    
    .insurance__badge-text {
        font-size: 0.625rem;
    }
}

@media (max-width: 480px) {
    .insurance__hero-nav {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.5rem;
    }
    
    .insurance__nav-item {
        justify-content: center;
    }
}
</style>
