{% extends 'base.html.twig' %}

{% block title %}{{ tp('help_center_contact.page.title', {}, 'help_center_contact') }} - {{ companySettings.companyName }}{% endblock %}

{% block body %}
<div class="contact-hero">
    <div class="contact-hero__container">
        <nav class="breadcrumb" aria-label="breadcrumb">
            <ol class="breadcrumb__list">
                {% for segment in tp('help_center_contact.page.breadcrumb', {}, 'help_center_contact')|split(' > ') %}
                    <li class="breadcrumb__item{% if loop.last %} breadcrumb__item--active{% endif %}">{{ segment }}</li>
                {% endfor %}
            </ol>
        </nav>
        
        <div class="contact-hero__content">
            <div class="contact-hero__text">
                <h1 class="contact-hero__title">{{ tp('help_center_contact.hero.title', {}, 'help_center_contact') }}</h1>
                <p class="contact-hero__subtitle">{{ tp('help_center_contact.hero.subtitle', {}, 'help_center_contact') }}</p>
            </div>
            <div class="contact-hero__icon">
                <twig:ux:icon name="tabler:message-circle" class="contact-hero__icon-svg" />
            </div>
        </div>
    </div>
</div>

<div class="contact-main">
    <!-- Contact Methods Section -->
    <section class="contact-methods">
        <div class="contact-methods__container">
            <h2 class="contact-methods__title">{{ tp('help_center_contact.contact_methods.title', {}, 'help_center_contact') }}</h2>
            
            <div class="contact-methods__grid">
                <!-- Phone -->
                <div class="contact-method">
                    <div class="contact-method__content">
                        <div class="contact-method__icon contact-method__icon--phone">
                            <twig:ux:icon name="tabler:phone" class="contact-method__icon-svg" />
                        </div>
                        <h3 class="contact-method__title">{{ tp('help_center_contact.contact_methods.phone.title', {}, 'help_center_contact') }}</h3>
                        <p class="contact-method__subtitle">{{ tp('help_center_contact.contact_methods.phone.subtitle', {}, 'help_center_contact') }}</p>
                        <div class="contact-method__number">{{ companySettings.phone }}</div>
                        <p class="contact-method__hours">{{ tp('help_center_contact.contact_methods.phone.hours', {}, 'help_center_contact') }}</p>
                        <p class="contact-method__description">{{ tp('help_center_contact.contact_methods.phone.description', {}, 'help_center_contact') }}</p>
                    </div>
                </div>
                
                <!-- Chat -->
                <div class="contact-method">
                    <div class="contact-method__content">
                        <div class="contact-method__icon contact-method__icon--chat">
                            <twig:ux:icon name="tabler:message-circle" class="contact-method__icon-svg" />
                        </div>
                        <h3 class="contact-method__title">{{ tp('help_center_contact.contact_methods.chat.title', {}, 'help_center_contact') }}</h3>
                        <p class="contact-method__subtitle">{{ tp('help_center_contact.contact_methods.chat.subtitle', {}, 'help_center_contact') }}</p>
                        <span class="contact-method__status contact-method__status--online">{{ tp('help_center_contact.contact_methods.chat.status_online', {}, 'help_center_contact') }}</span>
                        <p class="contact-method__hours">{{ tp('help_center_contact.contact_methods.chat.hours', {}, 'help_center_contact') }}</p>
                        <p class="contact-method__description">{{ tp('help_center_contact.contact_methods.chat.description', {}, 'help_center_contact') }}</p>
                        <button class="contact-method__button contact-method__button--chat">{{ tp('help_center_contact.contact_methods.chat.button_start', {}, 'help_center_contact') }}</button>
                    </div>
                </div>
                
                <!-- Email -->
                <div class="contact-method">
                    <div class="contact-method__content">
                        <div class="contact-method__icon contact-method__icon--email">
                            <twig:ux:icon name="tabler:mail" class="contact-method__icon-svg" />
                        </div>
                        <h3 class="contact-method__title">{{ tp('help_center_contact.contact_methods.email.title', {}, 'help_center_contact') }}</h3>
                        <p class="contact-method__subtitle">{{ tp('help_center_contact.contact_methods.email.subtitle', {}, 'help_center_contact') }}</p>
                        <div class="contact-method__number">{{ companySettings.email }}</div>
                        <p class="contact-method__hours">{{ tp('help_center_contact.contact_methods.email.response_time', {}, 'help_center_contact') }}</p>
                        <p class="contact-method__description">{{ tp('help_center_contact.contact_methods.email.description', {}, 'help_center_contact') }}</p>
                    </div>
                </div>
                
                <!-- Branches -->
                <div class="contact-method">
                    <div class="contact-method__content">
                        <div class="contact-method__icon contact-method__icon--branch">
                            <twig:ux:icon name="tabler:map-pin" class="contact-method__icon-svg" />
                        </div>
                        <h3 class="contact-method__title">{{ tp('help_center_contact.contact_methods.branch.title', {}, 'help_center_contact') }}</h3>
                        <p class="contact-method__subtitle">{{ tp('help_center_contact.contact_methods.branch.subtitle', {}, 'help_center_contact') }}</p>
                        <p class="contact-method__description">{{ tp('help_center_contact.contact_methods.branch.description', {}, 'help_center_contact') }}</p>
                        <a href="{{ path('support_branches') }}" class="contact-method__button contact-method__button--branch">{{ tp('help_center_contact.contact_methods.branch.button_find', {}, 'help_center_contact') }}</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Form Section -->
    <section class="contact-form">
        <div class="contact-form__container">
            <div class="contact-form__wrapper">
                <div class="contact-form__header">
                    <h3 class="contact-form__title">{{ tp('help_center_contact.contact_form.title', {}, 'help_center_contact') }}</h3>
                    <p class="contact-form__subtitle">{{ tp('help_center_contact.contact_form.subtitle', {}, 'help_center_contact') }}</p>
                </div>
                <div class="contact-form__body">
                    <form id="contactForm" class="form">
                        <div class="form__row">
                            <div class="form__group form__group--half">
                                <label for="subject" class="form__label">{{ tp('help_center_contact.contact_form.fields.subject', {}, 'help_center_contact') }} *</label>
                                <input type="text" class="form__input" id="subject" required
                                       placeholder="{{ tp('help_center_contact.contact_form.placeholders.subject', {}, 'help_center_contact') }}">
                            </div>
                            <div class="form__group form__group--half">
                                <label for="category" class="form__label">{{ tp('help_center_contact.contact_form.fields.category', {}, 'help_center_contact') }} *</label>
                                <select class="form__select" id="category" required>
                                    <option value="">{{ tp('help_center_contact.contact_form.categories.general', {}, 'help_center_contact') }}</option>
                                    <option value="account">{{ tp('help_center_contact.contact_form.categories.account', {}, 'help_center_contact') }}</option>
                                    <option value="card">{{ tp('help_center_contact.contact_form.categories.card', {}, 'help_center_contact') }}</option>
                                    <option value="transfer">{{ tp('help_center_contact.contact_form.categories.transfer', {}, 'help_center_contact') }}</option>
                                    <option value="credit">{{ tp('help_center_contact.contact_form.categories.credit', {}, 'help_center_contact') }}</option>
                                    <option value="insurance">{{ tp('help_center_contact.contact_form.categories.insurance', {}, 'help_center_contact') }}</option>
                                    <option value="technical">{{ tp('help_center_contact.contact_form.categories.technical', {}, 'help_center_contact') }}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form__row">
                            <div class="form__group form__group--half">
                                <label for="name" class="form__label">{{ tp('help_center_contact.contact_form.fields.name', {}, 'help_center_contact') }} *</label>
                                <input type="text" class="form__input" id="name" required
                                       placeholder="{{ tp('help_center_contact.contact_form.placeholders.name', {}, 'help_center_contact') }}">
                            </div>
                            <div class="form__group form__group--half">
                                <label for="email" class="form__label">{{ tp('help_center_contact.contact_form.fields.email', {}, 'help_center_contact') }} *</label>
                                <input type="email" class="form__input" id="email" required
                                       placeholder="{{ tp('help_center_contact.contact_form.placeholders.email', {}, 'help_center_contact') }}">
                            </div>
                        </div>
                        <div class="form__row">
                            <div class="form__group">
                                <label for="phone" class="form__label">{{ tp('help_center_contact.contact_form.fields.phone', {}, 'help_center_contact') }}</label>
                                <input type="tel" class="form__input" id="phone"
                                       placeholder="{{ tp('help_center_contact.contact_form.placeholders.phone', {}, 'help_center_contact') }}">
                            </div>
                        </div>
                        <div class="form__row">
                            <div class="form__group">
                                <label for="message" class="form__label">{{ tp('help_center_contact.contact_form.fields.message', {}, 'help_center_contact') }} *</label>
                                <textarea class="form__textarea" id="message" rows="5" required
                                          placeholder="{{ tp('help_center_contact.contact_form.placeholders.message', {}, 'help_center_contact') }}"></textarea>
                            </div>
                        </div>
                        <div class="form__row">
                            <div class="form__group">
                                <label for="attachment" class="form__label">{{ tp('help_center_contact.contact_form.fields.attachment', {}, 'help_center_contact') }}</label>
                                <input type="file" class="form__file" id="attachment" multiple>
                                <div class="form__help">Formats accept√©s: PDF, JPG, PNG, DOC (max 10MB)</div>
                            </div>
                        </div>
                        <div class="form__actions">
                            <button type="submit" class="button button--primary button--large">
                                <twig:ux:icon name="tabler:send" class="button__icon" />
                                {{ tp('help_center_contact.contact_form.buttons.send', {}, 'help_center_contact') }}
                            </button>
                            <button type="button" class="button button--secondary" onclick="document.getElementById('contactForm').reset()">
                                {{ tp('help_center_contact.contact_form.buttons.clear', {}, 'help_center_contact') }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Emergency Contacts -->
    <section class="emergency">
        <div class="emergency__container">
            <div class="emergency__header">
                <h3 class="emergency__title">
                    <twig:ux:icon name="tabler:alert-triangle" class="emergency__title-icon" />
                    {{ tp('help_center_contact.emergency.title', {}, 'help_center_contact') }}
                </h3>
                <p class="emergency__subtitle">{{ tp('help_center_contact.emergency.subtitle', {}, 'help_center_contact') }}</p>
            </div>
            <div class="emergency__grid">
                <div class="emergency-item">
                    <twig:ux:icon name="tabler:credit-card" class="emergency-item__icon" />
                    <h4 class="emergency-item__title">{{ tp('help_center_contact.emergency.card_lost.title', {}, 'help_center_contact') }}</h4>
                    <div class="emergency-item__number">{{ tp('help_center_contact.emergency.card_lost.number', {}, 'help_center_contact') }}</div>
                    <p class="emergency-item__description">{{ tp('help_center_contact.emergency.card_lost.description', {}, 'help_center_contact') }}</p>
                </div>
                <div class="emergency-item">
                    <twig:ux:icon name="tabler:shield" class="emergency-item__icon" />
                    <h4 class="emergency-item__title">{{ tp('help_center_contact.emergency.fraud.title', {}, 'help_center_contact') }}</h4>
                    <div class="emergency-item__number">{{ tp('help_center_contact.emergency.fraud.number', {}, 'help_center_contact') }}</div>
                    <p class="emergency-item__description">{{ tp('help_center_contact.emergency.fraud.description', {}, 'help_center_contact') }}</p>
                </div>
                <div class="emergency-item">
                    <twig:ux:icon name="tabler:lock" class="emergency-item__icon" />
                    <h4 class="emergency-item__title">{{ tp('help_center_contact.emergency.account_blocked.title', {}, 'help_center_contact') }}</h4>
                    <div class="emergency-item__number">{{ tp('help_center_contact.emergency.account_blocked.number', {}, 'help_center_contact') }}</div>
                    <p class="emergency-item__description">{{ tp('help_center_contact.emergency.account_blocked.description', {}, 'help_center_contact') }}</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Office Hours & Social -->
    <div class="contact-info">
        <div class="contact-info__container">
            <!-- Office Hours -->
            <div class="office-hours">
                <div class="office-hours__header">
                    <h4 class="office-hours__title">
                        <twig:ux:icon name="tabler:clock" class="office-hours__title-icon" />
                        {{ tp('help_center_contact.office_hours.title', {}, 'help_center_contact') }}
                    </h4>
                </div>
                <div class="office-hours__content">
                    <div class="office-hours__section">
                        <h5 class="office-hours__section-title">{{ tp('help_center_contact.office_hours.customer_service.title', {}, 'help_center_contact') }}</h5>
                        <ul class="office-hours__list">
                            <li>{{ tp('help_center_contact.office_hours.customer_service.hours.monday_friday', {}, 'help_center_contact') }}</li>
                            <li>{{ tp('help_center_contact.office_hours.customer_service.hours.saturday', {}, 'help_center_contact') }}</li>
                            <li>{{ tp('help_center_contact.office_hours.customer_service.hours.sunday', {}, 'help_center_contact') }}</li>
                        </ul>
                    </div>
                    <div class="office-hours__section">
                        <h5 class="office-hours__section-title">{{ tp('help_center_contact.office_hours.technical_support.title', {}, 'help_center_contact') }}</h5>
                        <ul class="office-hours__list">
                            <li>{{ tp('help_center_contact.office_hours.technical_support.hours.monday_friday', {}, 'help_center_contact') }}</li>
                            <li>{{ tp('help_center_contact.office_hours.technical_support.hours.saturday', {}, 'help_center_contact') }}</li>
                            <li>{{ tp('help_center_contact.office_hours.technical_support.hours.sunday', {}, 'help_center_contact') }}</li>
                        </ul>
                    </div>
                    <div class="office-hours__section">
                        <h5 class="office-hours__section-title">{{ tp('help_center_contact.office_hours.emergency.title', {}, 'help_center_contact') }}</h5>
                        <p class="office-hours__text">{{ tp('help_center_contact.office_hours.emergency.hours.always', {}, 'help_center_contact') }}</p>
                    </div>
                </div>
            </div>

            <!-- Social Media & FAQ -->
            <div class="social-section">
                <div class="social-section__header">
                    <h4 class="social-section__title">
                        <twig:ux:icon name="tabler:share" class="social-section__title-icon" />
                        {{ tp('help_center_contact.social.title', {}, 'help_center_contact') }}
                    </h4>
                </div>
                <div class="social-section__content">
                    <p class="social-section__description">{{ tp('help_center_contact.social.subtitle', {}, 'help_center_contact') }}</p>
                    <div class="social-links">
                        <a href="#" class="social-links__item social-links__item--facebook">
                            <twig:ux:icon name="tabler:brand-facebook" class="social-links__icon" />
                            {{ tp('help_center_contact.social.facebook', {}, 'help_center_contact') }}
                        </a>
                        <a href="#" class="social-links__item social-links__item--twitter">
                            <twig:ux:icon name="tabler:brand-twitter" class="social-links__icon" />
                            {{ tp('help_center_contact.social.twitter', {}, 'help_center_contact') }}
                        </a>
                        <a href="#" class="social-links__item social-links__item--linkedin">
                            <twig:ux:icon name="tabler:brand-linkedin" class="social-links__icon" />
                            {{ tp('help_center_contact.social.linkedin', {}, 'help_center_contact') }}
                        </a>
                        <a href="https://sedef.fr" class="social-links__item social-links__item--website" target="_blank">
                            <twig:ux:icon name="tabler:world" class="social-links__icon" />
                            sedef.fr
                        </a>
                    </div>
                    
                    <div class="faq-link">
                        <h5 class="faq-link__title">{{ tp('help_center_contact.faq.title', {}, 'help_center_contact') }}</h5>
                        <p class="faq-link__description">{{ tp('help_center_contact.faq.subtitle', {}, 'help_center_contact') }}</p>
                        <a href="{{ path('support_faq') }}" class="button button--outline">
                            {{ tp('help_center_contact.faq.button_view', {}, 'help_center_contact') }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Contact Hero */
.contact-hero {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    padding: 3rem 0;
    color: white;
}

.contact-hero__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}

.breadcrumb {
    margin-bottom: 2rem;
}

.breadcrumb__list {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 0.875rem;
    opacity: 0.8;
}

.breadcrumb__item:not(:last-child)::after {
    content: ' > ';
    margin: 0 0.5rem;
}

.breadcrumb__item--active {
    opacity: 1;
    font-weight: 500;
}

.contact-hero__content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 2rem;
    align-items: center;
}

.contact-hero__title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
    line-height: 1.2;
}

.contact-hero__subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
    line-height: 1.4;
}

.contact-hero__icon-svg {
    width: 5rem;
    height: 5rem;
    opacity: 0.6;
}

/* Contact Main */
.contact-main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1rem;
}

/* Contact Methods */
.contact-methods {
    margin-bottom: 4rem;
}

.contact-methods__container {
    text-align: center;
}

.contact-methods__title {
    font-size: 2rem;
    margin-bottom: 3rem;
    color: #333;
}

.contact-methods__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
}

.contact-method {
    background: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    height: 100%;
}

.contact-method:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

.contact-method__content {
    padding: 2rem;
    text-align: center;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.contact-method__icon {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
}

.contact-method__icon--phone {
    background: rgba(0, 123, 255, 0.1);
    color: #007bff;
}

.contact-method__icon--chat {
    background: rgba(40, 167, 69, 0.1);
    color: #28a745;
}

.contact-method__icon--email {
    background: rgba(255, 193, 7, 0.1);
    color: #ffc107;
}

.contact-method__icon--branch {
    background: rgba(23, 162, 184, 0.1);
    color: #17a2b8;
}

.contact-method__icon-svg {
    width: 1.5rem;
    height: 1.5rem;
}

.contact-method__title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.contact-method__subtitle {
    color: #6c757d;
    font-size: 0.875rem;
    margin-bottom: 1rem;
}

.contact-method__number {
    font-weight: bold;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: #333;
}

.contact-method__hours {
    color: #6c757d;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
}

.contact-method__description {
    color: #6c757d;
    font-size: 0.875rem;
    margin-bottom: 1rem;
    flex-grow: 1;
}

.contact-method__status {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
}

.contact-method__status--online {
    background: #28a745;
    color: white;
}

.contact-method__button {
    background: #007bff;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.875rem;
    cursor: pointer;
    transition: background-color 0.2s ease;
    text-decoration: none;
    display: inline-block;
}

.contact-method__button:hover {
    background: #0056b3;
    color: white;
    text-decoration: none;
}

.contact-method__button--chat {
    background: #28a745;
}

.contact-method__button--chat:hover {
    background: #1e7e34;
}

.contact-method__button--branch {
    background: #17a2b8;
}

.contact-method__button--branch:hover {
    background: #138496;
}

/* Contact Form */
.contact-form {
    margin-bottom: 4rem;
}

.contact-form__container {
    max-width: 800px;
    margin: 0 auto;
}

.contact-form__wrapper {
    background: white;
    border-radius: 8px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.contact-form__header {
    background: #007bff;
    color: white;
    padding: 2rem;
    text-align: center;
}

.contact-form__title {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
}

.contact-form__subtitle {
    opacity: 0.9;
    margin: 0;
}

.contact-form__body {
    padding: 2rem;
}

/* Form Styles */
.form__row {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.form__row:last-child {
    margin-bottom: 0;
}

.form__group {
    flex: 1;
}

.form__group--half {
    flex: 0 0 calc(50% - 0.5rem);
}

.form__label {
    display: block;
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: #333;
}

.form__input,
.form__select,
.form__textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

.form__input:focus,
.form__select:focus,
.form__textarea:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
}

.form__textarea {
    resize: vertical;
    min-height: 120px;
}

.form__file {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ddd;
    border-radius: 4px;
}

.form__help {
    font-size: 0.875rem;
    color: #6c757d;
    margin-top: 0.5rem;
}

.form__actions {
    text-align: center;
    margin-top: 2rem;
    display: flex;
    gap: 1rem;
    justify-content: center;
}

/* Button Styles */
.button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: center;
}

.button--primary {
    background: #007bff;
    color: white;
}

.button--primary:hover {
    background: #0056b3;
    color: white;
    text-decoration: none;
