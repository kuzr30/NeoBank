<style>
/* Styles pour l'onglet virements - format bancaire moderne */
.banking__transfers-section {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 2rem;
    overflow: hidden;
}

/* Liste des opérations en ligne */
.banking__operations-list {
    padding: 0;
}

.banking__operation-item {
    display: flex;
    align-items: center;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #f3f4f6;
    transition: background-color 0.2s;
    gap: 1rem;
}

.banking__operation-item:hover {
    background-color: #f8fafc;
}

.banking__operation-item:last-child {
    border-bottom: none;
}

.banking__operation-item--pending {
    border-left: 3px solid #fbbf24;
}

.banking__operation-item--executing {
    border-left: 3px solid #60a5fa;
}

.banking__operation-item--completed {
    border-left: 3px solid #34d399;
}

/* Icône de l'opération */
.banking__operation-icon {
    width: 2.5rem;
    height: 2.5rem;
    background: #f3f4f6;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.banking__operation-icon-svg {
    width: 1.25rem;
    height: 1.25rem;
    color: #6b7280;
}

/* Informations de l'opération */
.banking__operation-info {
    flex: 1;
    min-width: 0;
}

.banking__operation-description {
    font-weight: 600;
    color: #111827;
    margin-bottom: 0.25rem;
}

.banking__operation-note {
    display: block;
    font-weight: 400;
    color: #6b7280;
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

.banking__operation-date {
    font-size: 0.875rem;
    color: #6b7280;
}

/* Statut de l'opération */
.banking__operation-status {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.25rem;
    min-width: 120px;
}

.banking__status-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
}

.banking__status-badge--pending {
    background: #fef3c7;
    color: #92400e;
}

.banking__status-badge--executing {
    background: #dbeafe;
    color: #1e40af;
}

.banking__code-info {
    font-size: 0.75rem;
    color: #6b7280;
    text-align: right;
    margin-top: 0.25rem;
}

/* Montant de l'opération */
.banking__operation-amount {
    font-weight: 700;
    font-size: 1.125rem;
    min-width: 120px;
    text-align: right;
}

.banking__operation-amount--debit {
    color: #dc2626;
}

.banking__operation-amount--credit {
    color: #059669;
}

/* Actions rapides */
.banking__operation-actions {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
}

.banking__btn-small {
    width: 2rem;
    height: 2rem;
    border: none;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
}

.banking__btn-small--primary {
    background: #3b82f6;
    color: white;
}

.banking__btn-small--primary:hover {
    background: #2563eb;
}

.banking__btn-small--secondary {
    background: #f3f4f6;
    color: #6b7280;
}

.banking__btn-small--secondary:hover {
    background: #e5e7eb;
    color: #374151;
}

.banking__btn-small--danger {
    background: #fee2e2;
    color: #dc2626;
}

.banking__btn-small--danger:hover {
    background: #fecaca;
}

.banking__btn-icon {
    width: 1rem;
    height: 1rem;
}

/* Autres styles existants */
.banking__beneficiaries-section {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.banking__beneficiaries-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 1rem;
    padding: 1.5rem;
}

.banking__beneficiary-card {
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 1rem;
    cursor: pointer;
    transition: all 0.2s;
}

.banking__beneficiary-card:hover {
    border-color: #3b82f6;
    background: #f8fafc;
}

.banking__beneficiary-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
}

.banking__beneficiary-name {
    font-weight: 600;
    color: #111827;
    margin-bottom: 0.25rem;
}

.banking__beneficiary-bank {
    font-size: 0.875rem;
    color: #6b7280;
}

.banking__beneficiary-iban {
    margin-bottom: 1rem;
}

.banking__iban-label {
    font-size: 0.875rem;
    color: #6b7280;
    margin-right: 0.5rem;
}

.banking__iban-value {
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
    font-size: 0.875rem;
    color: #374151;
    background: #f3f4f6;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
}

.banking__beneficiary-actions {
    display: flex;
    gap: 0.5rem;
}

.banking__action-primary {
    background-color: #3b82f6;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.banking__action-primary:hover {
    background-color: #2563eb;
    color: white;
    text-decoration: none;
}

.banking__action-secondary {
    background-color: #f3f4f6;
    color: #374151;
    border: 1px solid #d1d5db;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.banking__action-secondary:hover {
    background-color: #e5e7eb;
    text-decoration: none;
    color: #374151;
}

.banking__subsection-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: #111827;
    padding: 1.5rem 1.5rem 1rem;
}

.banking__subsection-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #3b82f6;
}

.banking__action-icon {
    width: 1rem;
    height: 1rem;
}

.banking__empty-state {
    text-align: center;
    padding: 3rem 1.5rem;
    color: #6b7280;
}

.banking__empty-icon {
    width: 3rem;
    height: 3rem;
    margin: 0 auto 1rem;
    color: #d1d5db;
}

.banking__empty-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #374151;
    margin-bottom: 0.5rem;
}

.banking__empty-description {
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
}

/* Responsive */
@media (max-width: 768px) {
    .banking__operation-item {
        flex-direction: column;
        align-items: stretch;
        gap: 1rem;
        padding: 1rem;
    }
    
    .banking__operation-info,
    .banking__operation-status,
    .banking__operation-amount {
        text-align: left;
        min-width: auto;
    }
    
    .banking__operation-actions {
        justify-content: center;
        margin-top: 0.5rem;
    }
}
</style>

<!-- Onglet Virements -->
<section class="banking__content">
    
    <!-- Header -->
    <div class="banking__operations-header">
        <div class="banking__section-info">
            <h2 class="banking__section-title">{{ tp('banking_transfers.header.title', [], 'banking_transfers') }}</h2>
            <div class="banking__section-subtitle">{{ tp('banking_transfers.header.subtitle', [], 'banking_transfers') }}</div>
        </div>
        <div class="banking__section-actions">
            <a href="{{ path('banking_transfer_new') }}" class="banking__action-primary">
                {{ ux_icon('heroicons:plus', {'class': 'banking__action-icon'}) }}
                {{ tp('banking_transfers.header.new_transfer', [], 'banking_transfers') }}
            </a>
        </div>
    </div>

    <!-- Virements en cours -->
    {% if active_transfers|length > 0 %}
        <div class="banking__transfers-section">
            <h3 class="banking__subsection-title">
                {{ ux_icon('heroicons:clock', {'class': 'banking__subsection-icon'}) }}
                {{ tp('banking_transfers.active_transfers.title', [], 'banking_transfers') }}
            </h3>
            
            <div class="banking__operations-list">
                {% for transfer in active_transfers %}
                    <div class="banking__operation-item banking__operation-item--{{ transfer.status }}">
                        <div class="banking__operation-icon">
                            {{ ux_icon('heroicons:arrow-right', {'class': 'banking__operation-icon-svg'}) }}
                        </div>
                        
                        <div class="banking__operation-info">
                            <div class="banking__operation-description">
                                <strong>{{ tp('banking_transfers.active_transfers.transfer_to', {account: transfer.destinationAccount.accountName}, 'banking_transfers') }}</strong>
                                {% if transfer.description %}
                                    <span class="banking__operation-note">{{ transfer.description }}</span>
                                {% endif %}
                            </div>
                            <div class="banking__operation-date">{{ transfer.createdAt|date('d/m/Y à H:i') }}</div>
                        </div>
                        
                        <div class="banking__operation-status">
                            {% if transfer.status == 'pending' %}
                                <span class="banking__status-badge banking__status-badge--pending">{{ tp('banking_transfers.active_transfers.status.pending', [], 'banking_transfers') }}</span>
                            {% elseif transfer.status == 'executing' %}
                                <span class="banking__status-badge banking__status-badge--executing">{{ tp('banking_transfers.active_transfers.status.executing', [], 'banking_transfers') }}</span>
                            {% endif %}
                            
                            {% set currentCode = transfer.getCurrentCode() %}
                            {% if currentCode %}
                                <div class="banking__code-info">
                                    <strong style="color: white;font-weight: 600;background: rgba(255, 6, 6, 1);padding: 0.25rem 0.5rem;border-radius: 0.375rem;">{{ tp('banking_transfers.active_transfers.validation_code_required', [], 'banking_transfers') }}</strong> 
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="banking__operation-amount banking__operation-amount--debit">
                            -{{ transfer.amount|number_format(2, ',', ' ') }} €
                        </div>
                        
                        <div class="banking__operation-actions">
                            {% if currentCode %}
                                <a href="{{ path('banking_transfer_validate', {id: transfer.id}) }}" 
                                   class="banking__btn-small banking__btn-small--primary" title="{{ tp('banking_transfers.active_transfers.actions.enter_code', [], 'banking_transfers') }}">
                                    {{ ux_icon('heroicons:key', {'class': 'banking__btn-icon'}) }}
                                </a>
                            {% endif %}
                            
                            <a href="{{ path('banking_transfer_details', {id: transfer.id}) }}" 
                               class="banking__btn-small banking__btn-small--secondary" title="{{ tp('banking_transfers.active_transfers.actions.view_details', [], 'banking_transfers') }}">
                                {{ ux_icon('heroicons:eye', {'class': 'banking__btn-icon'}) }}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <!-- Comptes bénéficiaires -->
    <div class="banking__beneficiaries-section">
        <h3 class="banking__subsection-title">
            {{ ux_icon('heroicons:building-library', {'class': 'banking__subsection-icon'}) }}
            {{ tp('banking_transfers.beneficiaries.title', [], 'banking_transfers') }}
        </h3>
        
        {% if bank_accounts|length > 0 %}
            <div class="banking__beneficiaries-grid">
                {% for bankAccount in bank_accounts %}
                    <div class="banking__beneficiary-card">
                        <div class="banking__beneficiary-header">
                            <h4 class="banking__beneficiary-name">{{ bankAccount.accountName }}</h4>
                           
                        </div>
                        <div class="banking__beneficiary-iban">
                         <p class="banking__beneficiary-bank">{{ bankAccount.bankName }}</p>
                            <span class="banking__iban-label">{{ tp('banking_transfers.beneficiaries.iban_label', [], 'banking_transfers') }}</span>
                            <code class="banking__iban-value">{{ bankAccount.Iban }}</code>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="banking__empty-state">
                {{ ux_icon('heroicons:building-library', {'class': 'banking__empty-icon'}) }}
                <p>{{ tp('banking_transfers.beneficiaries.empty_state.title', [], 'banking_transfers') }}</p>
                <small>{{ tp('banking_transfers.beneficiaries.empty_state.description', [], 'banking_transfers') }}</small>
                <br>
                <a href="{{ path('banking_ribs') }}" class="banking__action-primary">
                    {{ ux_icon('heroicons:plus', {'class': 'banking__action-icon'}) }}
                    {{ tp('banking_transfers.beneficiaries.empty_state.add_rib_button', [], 'banking_transfers') }}
                </a>
            </div>
        {% endif %}
    </div>

</section>
