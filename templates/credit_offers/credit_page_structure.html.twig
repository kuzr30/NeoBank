{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} - {{ parent() }}{% endblock %}

{% block meta_description %}{{ page_description }}{% endblock %}

{% block body %}
<div class="credit-detail-page">
    <!-- Hero Section -->
    <section class="credit-detail-hero{% if hero_class is defined %} {{ hero_class }}{% endif %}">
        <div class="credit-detail-hero__container">
            <div class="credit-detail-hero__content">
                <div class="credit-detail-hero__breadcrumb">
                    <a href="{{ path('credit_offers_index', {_locale: app.request.locale}) }}">{{ tp('credit_page.breadcrumb.credit_offers', [], 'credit_page') }}</a>
                    <span>/</span>
                    <span>{{ page_title }}</span>
                </div>
                
                <h1 class="credit-detail-hero__title">{{ page_title }}</h1>
                <p class="credit-detail-hero__subtitle">{{ page_description }}</p>
                
                {% block hero_highlights %}
                <div class="credit-detail-hero__highlights">
                    <div class="credit-highlight">
                        <div class="credit-highlight__value">{% block taux_value %}3,5%{% endblock %}</div>
                        <div class="credit-highlight__label">{{ tp('credit_page.hero.highlights.rate_from', [], 'credit_page') }}</div>
                    </div>
                    <div class="credit-highlight">
                        <div class="credit-highlight__value">{% block montant_value %}100 000‚Ç¨{% endblock %}</div>
                        <div class="credit-highlight__label">{{ tp('credit_page.hero.highlights.max_amount', [], 'credit_page') }}</div>
                    </div>
                    <div class="credit-highlight">
                        <div class="credit-highlight__value">{% block duree_value %}15 ans{% endblock %}</div>
                        <div class="credit-highlight__label">{{ tp('credit_page.hero.highlights.max_duration', [], 'credit_page') }}</div>
                    </div>
                </div>
                {% endblock %}

                <div class="credit-detail-hero__actions">
                    <a href="{{ path('credit_simulation_index', {_locale: app.request.locale}) }}" class="credit-detail-hero__cta credit-detail-hero__cta--primary">
                        {{ ux_icon('heroicons:calculator', {'class': 'credit-detail-hero__cta-icon'}) }}
                        {{ tp('credit_page.hero.actions.simulate', [], 'credit_page') }}
                    </a>
                    <a href="{{ path('credit_application_start', {_locale: app.request.locale}) }}" class="credit-detail-hero__cta credit-detail-hero__cta--secondary">
                        {{ ux_icon('heroicons:document-text', {'class': 'credit-detail-hero__cta-icon'}) }}
                        {{ tp('credit_page.hero.actions.apply', [], 'credit_page') }}
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="credit-detail-content">
        <div class="credit-detail-content__container">
            <div class="credit-detail-content__grid">
                <!-- Left Column - Details -->
                <div class="credit-detail-content__main">
                    {% block main_sections %}
                    <div class="credit-detail-section">
                        <h2 class="credit-detail-section__title">
                            {{ ux_icon('heroicons:information-circle', {'class': 'credit-detail-section__icon'}) }}
                            {% block section_1_title %}{{ tp('credit_page.sections.section_1.title', [], 'credit_page') }}{% endblock %}
                        </h2>
                        <div class="credit-detail-section__content">
                            {% block section_1_content %}
                            <p>{{ tp('credit_page.sections.section_1.paragraph_1', [], 'credit_page') }}</p>
                            <p>{{ tp('credit_page.sections.section_1.paragraph_2', [], 'credit_page') }}</p>
                            {% endblock %}
                        </div>
                    </div>

                    <div class="credit-detail-section">
                        <h2 class="credit-detail-section__title">
                            {{ ux_icon('heroicons:banknotes', {'class': 'credit-detail-section__icon'}) }}
                            {% block section_2_title %}{{ tp('credit_page.sections.section_2.title', [], 'credit_page') }}{% endblock %}
                        </h2>
                        <div class="credit-detail-section__content">
                            {% block section_2_content %}
                            <div class="credit-detail-features">
                                <div class="credit-detail-feature">
                                    <div class="credit-detail-feature__icon">
                                        {{ ux_icon('heroicons:currency-euro', {'class': 'credit-detail-feature__icon-svg'}) }}
                                    </div>
                                    <div class="credit-detail-feature__content">
                                        <h3 class="credit-detail-feature__title">{{ tp('credit_page.sections.section_2.features.amount.title', [], 'credit_page') }}</h3>
                                        <p class="credit-detail-feature__description">{% block feature_montant %}{{ tp('credit_page.sections.section_2.features.amount.description', [], 'credit_page') }}{% endblock %}</p>
                                        <p class="credit-detail-feature__detail">{% block feature_montant_detail %}{{ tp('credit_page.sections.section_2.features.amount.detail', [], 'credit_page') }}{% endblock %}</p>
                                    </div>
                                </div>

                                <div class="credit-detail-feature">
                                    <div class="credit-detail-feature__icon">
                                        {{ ux_icon('heroicons:clock', {'class': 'credit-detail-feature__icon-svg'}) }}
                                    </div>
                                    <div class="credit-detail-feature__content">
                                        <h3 class="credit-detail-feature__title">{{ tp('credit_page.sections.section_2.features.duration.title', [], 'credit_page') }}</h3>
                                        <p class="credit-detail-feature__description">{% block feature_duree %}{{ tp('credit_page.sections.section_2.features.duration.description', [], 'credit_page') }}{% endblock %}</p>
                                        <p class="credit-detail-feature__detail">{% block feature_duree_detail %}{{ tp('credit_page.sections.section_2.features.duration.detail', [], 'credit_page') }}{% endblock %}</p>
                                    </div>
                                </div>

                                <div class="credit-detail-feature">
                                    <div class="credit-detail-feature__icon">
                                        {{ ux_icon('heroicons:chart-bar', {'class': 'credit-detail-feature__icon-svg'}) }}
                                    </div>
                                    <div class="credit-detail-feature__content">
                                        <h3 class="credit-detail-feature__title">{{ tp('credit_page.sections.section_2.features.rate.title', [], 'credit_page') }}</h3>
                                        <p class="credit-detail-feature__description">{% block feature_taux %}{{ tp('credit_page.sections.section_2.features.rate.description', [], 'credit_page') }}{% endblock %}</p>
                                        <p class="credit-detail-feature__detail">{% block feature_taux_detail %}{{ tp('credit_page.sections.section_2.features.rate.detail', [], 'credit_page') }}{% endblock %}</p>
                                    </div>
                                </div>

                                <div class="credit-detail-feature">
                                    <div class="credit-detail-feature__icon">
                                        {{ ux_icon('heroicons:shield-check', {'class': 'credit-detail-feature__icon-svg'}) }}
                                    </div>
                                    <div class="credit-detail-feature__content">
                                        <h3 class="credit-detail-feature__title">{{ tp('credit_page.sections.section_2.features.guarantee.title', [], 'credit_page') }}</h3>
                                        <p class="credit-detail-feature__description">{% block feature_garantie %}{{ tp('credit_page.sections.section_2.features.guarantee.description', [], 'credit_page') }}{% endblock %}</p>
                                        <p class="credit-detail-feature__detail">{% block feature_garantie_detail %}{{ tp('credit_page.sections.section_2.features.guarantee.detail', [], 'credit_page') }}{% endblock %}</p>
                                    </div>
                                </div>
                            </div>
                            {% endblock %}
                        </div>
                    </div>

                    <div class="credit-detail-section">
                        <h2 class="credit-detail-section__title">
                            {{ ux_icon('heroicons:check-circle', {'class': 'credit-detail-section__icon'}) }}
                            {% block section_3_title %}{{ tp('credit_page.sections.section_3.title', [], 'credit_page') }}{% endblock %}
                        </h2>
                        <div class="credit-detail-section__content">
                            {% block section_3_content %}
                            <ul class="credit-detail-advantages">
                                <li class="credit-detail-advantage">
                                    <span class="credit-detail-advantage__icon">{{ ux_icon('heroicons:check', {'class': 'credit-detail-advantage__icon-svg'}) }}</span>
                                    <span class="credit-detail-advantage__text">{{ tp('credit_page.sections.section_3.advantages.advantage_1', [], 'credit_page')|raw }}</span>
                                </li>
                                <li class="credit-detail-advantage">
                                    <span class="credit-detail-advantage__icon">{{ ux_icon('heroicons:check', {'class': 'credit-detail-advantage__icon-svg'}) }}</span>
                                    <span class="credit-detail-advantage__text">{{ tp('credit_page.sections.section_3.advantages.advantage_2', [], 'credit_page')|raw }}</span>
                                </li>
                                <li class="credit-detail-advantage">
                                    <span class="credit-detail-advantage__icon">{{ ux_icon('heroicons:check', {'class': 'credit-detail-advantage__icon-svg'}) }}</span>
                                    <span class="credit-detail-advantage__text">{{ tp('credit_page.sections.section_3.advantages.advantage_3', [], 'credit_page')|raw }}</span>
                                </li>
                            </ul>
                            {% endblock %}
                        </div>
                    </div>

                    <div class="credit-detail-section">
                        <h2 class="credit-detail-section__title">
                            {{ ux_icon('heroicons:document-check', {'class': 'credit-detail-section__icon'}) }}
                            {% block section_4_title %}{{ tp('credit_page.sections.section_4.title', [], 'credit_page') }}{% endblock %}
                        </h2>
                        <div class="credit-detail-section__content">
                            {% block section_4_content %}
                            <div class="credit-detail-requirements">
                                <div class="credit-detail-requirement">
                                    <h3>{{ tp('credit_page.sections.section_4.requirements.borrower_profile.title', [], 'credit_page') }}</h3>
                                    <ul>
                                        <li>{{ tp('credit_page.sections.section_4.requirements.borrower_profile.item_1', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_4.requirements.borrower_profile.item_2', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_4.requirements.borrower_profile.item_3', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_4.requirements.borrower_profile.item_4', [], 'credit_page') }}</li>
                                    </ul>
                                </div>
                                <div class="credit-detail-requirement">
                                    <h3>{{ tp('credit_page.sections.section_4.requirements.general_conditions.title', [], 'credit_page') }}</h3>
                                    <ul>
                                        <li>{{ tp('credit_page.sections.section_4.requirements.general_conditions.item_1', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_4.requirements.general_conditions.item_2', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_4.requirements.general_conditions.item_3', [], 'credit_page') }}</li>
