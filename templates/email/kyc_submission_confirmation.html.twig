{% extends 'email/base_email.html.twig' %}

{% block title %}{{ tp('email_kyc_submission_confirmation.title', {}, 'email_kyc_submission_confirmation') }}{% endblock %}

{% block content %}
    <h2 class="content-title">{{ tp('email_kyc_submission_confirmation.content.page_title', {}, 'email_kyc_submission_confirmation') }}</h2>
    
    <p class="content-text">
        {{ tp('email_kyc_submission_confirmation.content.greeting', {firstName: user.firstName}, 'email_kyc_submission_confirmation')|raw }}
    </p>

    <div class="success-box">
        <h3 style="margin-top: 0; color: #2e7d32;">{{ tp('email_kyc_submission_confirmation.content.success.title', {}, 'email_kyc_submission_confirmation') }}</h3>
        <p style="margin-bottom: 0; color: #000000;">
            {{ tp('email_kyc_submission_confirmation.content.success.message', {}, 'email_kyc_submission_confirmation') }}
        </p>
    </div>

    <p class="content-text">
        {{ tp('email_kyc_submission_confirmation.content.processing_info', {}, 'email_kyc_submission_confirmation') }}
    </p>

    <div class="btn-container" style="text-align:center;margin:50px 0;">
        <a href="{{ url('kyc_status') }}" class="btn" style="display:inline-block;margin:0;padding:22px 45px;background:#2c3e50;color:#ffffff!important;font-size:20px;font-weight:700;line-height:1;text-decoration:none;text-align:center;border-radius:50px;border:none;cursor:pointer;box-shadow:0 15px 35px rgba(44,62,80,0.4);text-transform:uppercase;letter-spacing:1px;transition:all 0.3s ease;">{{ tp('email_kyc_submission_confirmation.content.track_button', {}, 'email_kyc_submission_confirmation') }}</a>
    </div>

    <div class="info-box">
        <h3 style="margin-top: 0; color: #1976d2;">{{ tp('email_kyc_submission_confirmation.content.documents.title', {}, 'email_kyc_submission_confirmation') }}</h3>
        <p style="margin-bottom: 15px; color: #000000;">{{ tp('email_kyc_submission_confirmation.content.documents.intro', {}, 'email_kyc_submission_confirmation') }}</p>
        <ul style="margin: 0; padding-left: 20px; color: #000000;">
            {% for document in submission.documents %}
                <li style="margin-bottom: 8px;">{{ document|kyc_document_type_label }}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="warning-box">
        <h3 style="margin-top: 0; color: #f57c00;">{{ tp('email_kyc_submission_confirmation.content.questions.title', {}, 'email_kyc_submission_confirmation') }}</h3>
        <p style="margin-bottom: 0; color: #000000;">
            {{ tp('email_kyc_submission_confirmation.content.questions.message', {}, 'email_kyc_submission_confirmation') }}
        </p>
    </div>

    <p class="content-text" style="margin-bottom: 0;">
        {{ tp('email_kyc_submission_confirmation.content.closing', {}, 'email_kyc_submission_confirmation')|raw }}
    </p>
{% endblock %}
