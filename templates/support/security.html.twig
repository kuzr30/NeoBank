                        <p class="security-category__description">{{ tp('help_center_security.sections.fraud_prevention.description', {}, 'help_center_security') }}</p>
                    </div>
                    
                    <div class="security-category__items">
                        <div class="security-item">
                            <div class="security-item__header">
                                <twig:ux:icon name="heroicons:eye" class="security-item__icon" />
