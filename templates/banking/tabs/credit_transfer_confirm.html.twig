<!-- Confirmation du virement crédit -->
<section class="banking__content">
    <div class="banking__operations-header">
        <div class="banking__account-summary">
            <h1 class="banking__account-title">{{ tp('banking_credit_transfer.confirmation.title', [], 'banking_credit_transfer') }}</h1>
            <div class="banking__account-details">
                <span class="banking__account-type">{{ tp('banking_credit_transfer.confirmation.verification_required', [], 'banking_credit_transfer') }}</span>
                <span class="banking__account-updated">{{ "now"|date('d/m/Y à H:i') }}</span>
            </div>
        </div>
    </div>

    <div class="banking__transfer-form-wrapper">
        <div class="banking__transfer-card">
            <!-- Résumé du transfert -->
            <div class="banking__transfer-summary">
                <h3 class="banking__transfer-section-title">{{ tp('banking_credit_transfer.confirmation.transfer_summary', [], 'banking_credit_transfer') }}</h3>
                
                <div class="banking__transfer-flow">
                    <!-- Compte source -->
                    <div class="banking__transfer-account">
                        <div class="banking__account-icon">
                            <svg class="banking__account-icon-svg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                            </svg>
                        </div>
                        <div class="banking__account-details">
                            <div class="banking__account-name">{{ tp('banking_credit_transfer.accounts.credit_account', [], 'banking_credit_transfer') }}</div>
                            <div class="banking__account-number">{{ subAccountCredit.account.accountNumber }}</div>
                        </div>
                    </div>

                    <!-- Flèche -->
                    <div class="banking__transfer-arrow">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                    </div>

                    <!-- Compte destination -->
                    <div class="banking__transfer-account">
                        <div class="banking__account-icon banking__account-icon--primary">
                            <svg class="banking__account-icon-svg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1"></path>
                            </svg>
                        </div>
                        <div class="banking__account-details">
                            <div class="banking__account-name">{{ tp('banking_credit_transfer.accounts.main_account', [], 'banking_credit_transfer') }}</div>
                            <div class="banking__account-number">{{ tp('banking_credit_transfer.accounts.current_account', [], 'banking_credit_transfer') }}</div>
                        </div>
                    </div>
                </div>

                <!-- Montant -->
                <div class="banking__transfer-amount">
                    <span class="banking__amount-label">{{ tp('banking_credit_transfer.confirmation.amount_label', [], 'banking_credit_transfer') }}</span>
                    <span class="banking__amount-value">{{ amount|number_format(2, ',', ' ') }} €</span>
                </div>
            </div>

            <!-- Formulaire de confirmation -->
            <form method="post" action="{{ path('banking_credit_transfer_confirm') }}" class="banking__transfer-form" data-turbo="false">
                <input type="hidden" name="_token" value="{{ csrf_token('credit_transfer_confirm') }}">

                <div class="banking__form-section">
                    <h3 class="banking__transfer-section-title">{{ tp('banking_credit_transfer.confirmation.verification_code_title', [], 'banking_credit_transfer') }}</h3>
                    <div class="banking__verification-info">
                        <p>{{ tp('banking_credit_transfer.confirmation.verification_info', [], 'banking_credit_transfer') }}</p>
                    </div>
                    <div class="banking__code-input-wrapper">
                        <input type="text" 
                               class="banking__code-input" 
                               id="verification_code" 
                               name="verification_code" 
                               placeholder="{{ tp('banking_credit_transfer.confirmation.code_placeholder', [], 'banking_credit_transfer') }}"
                               maxlength="6"
                               pattern="[0-9]{6}"
                               required>
                    </div>
                </div>

                <div class="banking__form-actions">
                    <a href="{{ path('banking_credits') }}" class="banking__btn banking__btn--secondary">{{ tp('banking_credit_transfer.actions.cancel', [], 'banking_credit_transfer') }}</a>
                    <button type="submit" class="banking__btn banking__btn--primary">{{ tp('banking_credit_transfer.actions.confirm_transfer', [], 'banking_credit_transfer') }}</button>
                </div>
            </form>
        </div>
    </div>
</section>

