                                <div class="credit-detail-document-category">
                                    <h3>{{ tp('credit_page.sections.section_5.documents.identity.title', [], 'credit_page') }}</h3>
                                    <ul>
                                        <li>{{ tp('credit_page.sections.section_5.documents.identity.item_1', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_5.documents.identity.item_2', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_5.documents.identity.item_3', [], 'credit_page') }}</li>
                                    </ul>
                                </div>
                                <div class="credit-detail-document-category">
                                    <h3>{{ tp('credit_page.sections.section_5.documents.income.title', [], 'credit_page') }}</h3>
                                    <ul>
                                        <li>{{ tp('credit_page.sections.section_5.documents.income.item_1', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_5.documents.income.item_2', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_5.documents.income.item_3', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_5.documents.income.item_4', [], 'credit_page') }}</li>
                                    </ul>
                                </div>
                                <div class="credit-detail-document-category">
                                    <h3>{{ tp('credit_page.sections.section_5.documents.additional.title', [], 'credit_page') }}</h3>
                                    <ul>
                                        <li>{{ tp('credit_page.sections.section_5.documents.additional.item_1', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_5.documents.additional.item_2', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_5.documents.additional.item_3', [], 'credit_page') }}</li>
                                        <li>{{ tp('credit_page.sections.section_5.documents.additional.item_4', [], 'credit_page') }}</li>
                                    </ul>
                                </div>
                            </div>
                            {% endblock %}
                        </div>
                    </div>
                    {% endblock %}
                </div>

                <!-- Right Column - Sidebar -->
                <div class="credit-detail-content__sidebar">
                    {% block sidebar %}
                    <div class="credit-detail-sidebar">
                        <div class="credit-detail-card">
                            <div class="credit-detail-card__header">
                                <h3 class="credit-detail-card__title">{{ tp('credit_page.sidebar.simulation.title', [], 'credit_page') }}</h3>
                            </div>
                            <div class="credit-detail-card__content">
                                <p>{{ tp('credit_page.sidebar.simulation.text', [], 'credit_page') }}</p>
