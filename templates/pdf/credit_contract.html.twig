    <!-- {{ 'credit_contract.chapter_one.title'|trans({}, 'credit_contract', _locale) }} -->
    <div class="chapter">
        <h2 class="chapter-title">{{ 'credit_contract.chapter_one.title'|trans({}, 'credit_contract', _locale) }}</h2>
        
        <div class="parties-section">
            <div class="party-column">
                <div class="party-header">{{ 'credit_contract.chapter_one.lender_header'|trans({}, 'credit_contract', _locale) }}</div>
                <strong>{{ company_name()|default('SEDEF BANK') }}</strong><br>
                {{ 'credit_contract.chapter_one.company_type'|trans({}, 'credit_contract', _locale) }}<br>
                {{ 'credit_contract.chapter_one.share_capital'|trans({'%amount%': '1 000 000'}, 'credit_contract', _locale) }}<br>
                {{ 'credit_contract.chapter_one.head_office'|trans({}, 'credit_contract', _locale) }} {{ company_address()|default('123 Avenue des Finances, 75001 Paris') }}<br>
              
                {{ 'credit_contract.chapter_one.represented_by'|trans({}, 'credit_contract', _locale) }}<br>
                <em>{{ 'credit_contract.chapter_one.hereinafter_lender'|trans({}, 'credit_contract', _locale) }}</em>
            </div>
            
            <div class="party-column">
                <div class="party-header">{{ 'credit_contract.chapter_one.borrower_header'|trans({}, 'credit_contract', _locale) }}</div>
